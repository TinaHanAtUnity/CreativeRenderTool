{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "strict": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/ts/*",
        "test/*"
      ]
    },
    "outDir": "build",
    "moduleResolution": "node",
    "inlineSourceMap": true
  },
  "include": [
    "src/ts/**/*.ts",
    "test/**/*.ts"
  ]
}
