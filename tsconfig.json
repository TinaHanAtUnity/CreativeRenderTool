{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/ts/*",
        "test/*"
      ]
    },
    "outDir": "build",
    "sourceMap": true
  },
  "include": [
    "src/ts/**/*.ts",
    "test/**/*.ts"
  ]
}
