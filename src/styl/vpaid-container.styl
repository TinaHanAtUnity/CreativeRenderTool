@import "vars.styl";

body {
    margin: 0;
    padding: 0;
    width: 100vw;
    height: 100vh;
}

.video-player-slot {
    width: 100%;
    height: 100%;

    video {
        width: 100%;
        height: 100%;
    }
}

  .progress {
    position: fixed;
    top: 10px;
    right: 10px;
    width: 36px;
    height: 36px;
    color: $white;
  }

  .progress-wrapper {
    position: absolute;
    clip: rect(0, 36px, 36px, 18px);
    width: 36px;
    height: 36px;
  }

  .progress:after {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    color: $white;
    content: attr(data-seconds);
    font-size: 18px;
    transform: translate(-50%, -50%);
  }

  .circle-base,
  .circle-left,
  .circle-right {
    position: absolute;
    width: 28px;
    height: 28px;
    border-radius: 100%;
    background-color: transparent;
    vertical-align: middle;
  }

  .circle-base {
    border: 4px solid rgba(105, 105, 105, .4);
  }

  .circle-left,
  .circle-right {
    clip: rect(0px, 18px, 36px, 0);
    border: 4px solid $white;
  }

  .progress-wrapper,
  .circle-left,
  .circle-right {
    animation-duration: .01s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-timing-function: linear;
  }

  @keyframes right-spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(180deg);
  }
}

@keyframes left-spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes close-progress-wrapper {
  to {
    clip: rect(auto, auto, auto, auto);
  }
}
