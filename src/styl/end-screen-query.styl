@import "vars.styl";

$endscreen-default-size = unit(($default-px-size / 16), "em");
$scale-size = $default-scale-size;

#end-screen {
  .download-query {
    padding-top: $endscreen-default-size * 1;
    padding-bottom: $endscreen-default-size * .3;

    .download-query-text {
      font-size: 80%;
    }
  }

  .download-container-query {
    display: block;
    padding-top: 0;
    background-color: transparent;

    .download-button {
      padding: $endscreen-default-size * .6 0;
      border-radius: $endscreen-default-size * .6;
    }

    .download-yes {
      float: right;
      width: 60%;
      background: $blue;
    }

    .download-no {
      float: left;
      width: 35%;
      background: $light-gray;
    }
  }
}

body {
  &.portrait #end-screen {
    .download-container-query {
      margin: 2.4 * $endscreen-default-size auto 0 auto;
    }

    @media (max-width: 480px) {
      .download-query {
        padding-top: $endscreen-default-size * .3;
        padding-bottom: $endscreen-default-size * .15;
      }

      .game-icon {
        margin-bottom: $endscreen-default-size * .4;
      }
    }
  }

  &.ios {
    #end-screen .end-screen-info {
      .download-container-query {
        border-radius: 2.25 * $endscreen-default-size;
      }
    }
  }

  &.landscape #end-screen {
    .end-screen-info {
      .download-container-query {
        margin: 0;
      }
    }

    .download-query {
      padding-top: $endscreen-default-size * 1;
      padding-bottom: $endscreen-default-size * .3;
    }
  }
}

$iphone-x-overlay-styles() {
  body {
    &.portrait #end-screen {
      .download-container-query {
        margin: 0 auto ($endscreen-default-size * .2)auto;
      }

      .download-query {
        padding-top: $endscreen-default-size * .8;
        padding-bottom: $endscreen-default-size * .6;
      }
    }

    &.landscape #end-screen {
      .end-screen-info {
        .download-container-query {
          margin: 0 auto ($endscreen-default-size * .2) auto;
        }

        .download-query {
          padding-top: $endscreen-default-size * .5;
          padding-bottom: $endscreen-default-size * .4;
        }
      }
    }
  }
}

/**
 * iPhone X & iPhone XS safe area customizations
 */
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
  $iphone-x-overlay-styles();
}

/**
 * iPhone XS Max safe area customizations
 */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
  $iphone-x-overlay-styles();
}

/**
 * iPhone XR safe area customizations
 */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
  $iphone-x-overlay-styles();
}