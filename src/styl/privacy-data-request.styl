@import "components.styl";

#privacy-data-request {
  display: flex;
  flex-direction: column;
  text-align: left;

  input[type=email] {
    flex-grow: 1;
    border: 1px solid $consent-border-gray;
    margin-top: .75 * $default-size;
    padding: .5 * $default-size;
    border-radius: .25 * $default-size;
    font-size: $default-font-size * .65;
    box-shadow: none;
    -webkit-appearance: none;
  }

  .privacy-data-request-submit-button {
    position: relative;
    flex-grow: 1;
    margin-top: .5 * $default-size;
    padding: .5 * $default-size;
    border-radius: .25 * $default-size;
    // -webkit-appearance: none;
    background: $blue;
    box-shadow: none;
    color: $white;
    text-align: center;
    font-weight: $privacy-title-font-weight;
    font-size: $default-font-size * .75;

    &.disabled {
      opacity: .3;
      pointer-events: none;
    }
  }

  .privacy-data-request-submit-button {
    &.click-animation {
      $click-animation();
    }
  }

  .privacy-data-request-msg {
    display: none;
    flex-grow: 1;
    margin-top: .5 * $default-size;
    padding: .5 * $default-size;
    background: $white-smoke;
    font-weight: 400;

    &.show-msg {
      display: block;
    }
  }

  .privacy-data-request-confirm-msg {
    color: $black;
  }

  .privacy-data-request-error-msg {
    color: $privacy-red;
  }
}
