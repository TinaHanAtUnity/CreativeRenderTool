#end-screen

  @import "game-shared.styl"

  .campaign-container
    width: 100%
    height: 100%

  .btn-close-region
    position: fixed
    z-index: 1
    top: 0
    right: 0
    width: 55px
    height: 55px

  a.btn-close
    z-index: 1
    position: absolute
    top: 10px
    right: 10px
    font-size: 28px
    width: 32px
    height: 32px
    color: #ffffff
    text-shadow: 2px 2px 20px #7c7c7c
    text-align: center
    line-height: 28px

  .game-background
    position: fixed
    top: 0
    bottom: 47%
    width: 100%
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    background-color: #000
    &.brand
      background-size: contain
      bottom: 0

  .end-screen-info-background
    position: fixed
    bottom: 0
    width: 100%
    height: 47%
    border-top: 4px solid #e6e6e6
    background-color: #fafafa

    &.dark
      font-family: -apple-system, Helvetica, sans-serif

      @-webkit-keyframes slideInUp {
        0% {
          -webkit-transform: translate3d(0, 200px, 0)
                  transform: translate3d(0, 200px, 0)
        }

        40% {
          -webkit-transform: translate3d(0, -10px, 0)
                  transform: translate3d(0, -10px, 0)
          opacity: 0.25
        }

        100% {
          -webkit-transform: translate3d(0, 0, 0)
                  transform: translate3d(0, 0, 0)
          opacity: 1
        }
      }

      @keyframes slideInUp {
        0% {
          -webkit-transform: translate3d(0, 200px, 0)
                  transform: translate3d(0, 200px, 0)
        }

        40% {
          -webkit-transform: translate3d(0, -10px, 0)
                  transform: translate3d(0, -10px, 0)
          opacity: 0.25
        }

        100% {
          -webkit-transform: translate3d(0, 0, 0)
                  transform: translate3d(0, 0, 0)
          opacity: 1
        }
      }

      .game-icon,
      .name-container,
      .store-container,
      .download-container
        -webkit-animation-fill-mode: forwards
        animation-fill-mode: forwards
        -webkit-animation-timing-function: ease-out
        animation-timing-function: ease-out
        opacity: 0

      &.without-animation
        .game-icon,
        .name-container,
        .store-container,
        .download-container
          opacity: 1

      &.animate
        .game-icon,
        .name-container,
        .store-container,
        .download-container
          -webkit-animation-name: slideInUp
          animation-name: slideInUp

        .game-icon
          -webkit-animation-duration: 0.75s
          animation-duration: 0.75s
          -webkit-animation-delay: 0s
          animation-delay: 0s

        .name-container
          -webkit-animation-duration: 0.75s
          animation-duration: 0.75s
          -webkit-animation-delay: 0.08s
          animation-delay: 0.08s

        .store-container
          -webkit-animation-duration: 0.75s
          animation-duration: 0.75s
          -webkit-animation-delay: 0.08s
          animation-delay: 0.08s

        .download-container
          -webkit-animation-duration: 0.75s
          animation-duration: 0.75s
          -webkit-animation-delay: 0.16s
          animation-delay: 0.16s

      .name-container,
      .game-rating-count
        color: #ffffff

      .game-rating-count
        margin-left: 5pt

      .end-screen-underlay
        width: 100vw
        height: 100vh
        background-size: cover
        background-repeat: no-repeat
        background-position: center
        -webkit-filter: brightness(100%) blur(20px)
        filter: brightness(100%) blur(20px)
        -webkit-transform: scale(1.5)
        transform: scale(1.5)

        &:before {
          content: ''
          position: absolute
          top: 0
          right: 0
          bottom: 0
          left: 0
          background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(255,255,255,0)), color-stop(80%, #000))
          background-image: -webkit-linear-gradient(rgba(255,255,255,0), #000 80%)
          background-image: linear-gradient(rgba(255,255,255,0), #000 80%)
        }

      .game-icon
        top: -20pt
        width: 115px
        height: 115px

      .game-info
        margin-left: 0

      .unityads-logo {
        background-image: url('../img/unityads-white.png')
      }

      .btn-download
        background: -webkit-gradient(linear, left top, left bottom, from(#00e3c8),  to(#00cbd6))
        background: -webkit-linear-gradient(#00e3c8, #00cbd6)
        background: linear-gradient(#00e3c8, #00cbd6)
        margin: 12.5pt auto
        padding: 5px
        width 40%
        font-weight: 600
        font-size: 20pt

.end-screen-info
    position: absolute
    top: 45%
    width: 100%
    -webkit-transform: translate(0, -50%)
    transform: translate(0, -50%)

  .game-info
    margin-left: 18px

  .game-icon
    float: left

  .name-container
    padding-left: 10px
    padding-right: 10px
    padding-top: 8px
    text-overflow: ellipsis
    -webkit-line-clamp: 2
    display: -webkit-box
    -webkit-box-orient: vertical

  .store-container
    margin-left: 10px
    margin-top: 5px
    float: left
    display: -webkit-box
    display: -webkit-flex
    -webkit-box-align: center
    -webkit-box-pack: center
    -webkit-justify-content: center

  .download-container
    text-align: center
    clear: both

  .btn-download
    color: #ffffff
    display: block
    background: #167dfb
    left: 0
    right: 0

  .privacy-button
    position: absolute
    bottom: 10px
    left: 15px
    color: #e6e6e6
    text-decoration: none
    font-size: 22px

  .btn-download
    margin: 0 15px
    padding: 10px
    border-radius: 10px
    font-size: 18pt
    line-height: 24pt
    margin-top: 45px

// END SCREEN landscape specific
body.landscape
  #end-screen
    .game-background-portrait,
    .underlay-portrait
      display: none
    .game-background-landscape,
    .underlay-landscape
      display: block

    .game-background
      width: 53%
      bottom: 0
      &.brand
        width: 100%

    .end-screen-info-background
      width: 47%
      height: 100%
      right: 0
      border-top: none
      border-left: 4px solid #e6e6e6

      &.dark
        width: 100vw
        height: 100vh

        .end-screen-info
          left: 0
          right: 0
          top: 45%
          bottom: 0
          margin: auto

      .btn-download
        font-size: 14pt

    a.btn-close
      color: #7c7c7c
      text-shadow: 0px 0px 0px #fafafa

    .game-info
      margin-left: auto

    .game-icon
      left: 0
      right: 0
      position: absolute
      margin: auto

    .name-container
      padding-top: 95px
      font-size: 20pt
      text-overflow: ellipsis
      -webkit-line-clamp: 2
      overflow: hidden
      display: -webkit-box
      -webkit-box-orient: vertical
      text-align: center

    .store-container
      float: none
      clear: both
      margin: auto
      padding-top: 0

    .btn-download
      font-size: 11pt
      padding: 5px 10px 5px 10px
      margin-top: 15px

// END SCREEN portrait specific
body.portrait
  #end-screen
    .game-background-portrait,
    .underlay-portrait
      display: block
    .game-background-landscape,
    .underlay-landscape
      display: none

    .end-screen-info-background.dark
      width: 100vw
      height: 100vh

      .game-icon
        float: none
        margin: 15pt auto
        width: 150px
        height: 150px

      .name-container
        text-align: center

      .store-container
        float: none

      .btn-download
        padding: 15px 10px
        width: 75%
        font-size: 18pt

