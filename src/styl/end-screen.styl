  @media screen and (max-height: 320px) and (max-width: 427px), screen and (max-height: 427px) and (max-width: 320px) {
    #end-screen {
      .game-icon {
        width: 60px;
        height: 60px;
        border-radius: 12pt;
      }

      .end-screen-info-background.dark .game-icon {
        width: 120px;
        height: 120px;
        border-radius: 15pt;
      }

      .name-container {
        font-size: 15pt;
      }

      .btn-download {
        padding: 5px;
        font-size: 16pt;
      }
    }

    &.landscape {
      #end-screen {
        .name-container {
          font-size: 13pt;
        }

        .game-rating {
          font-size: 17px;
        }

        .btn-download {
          padding: 5px; // 320 x 568 - iPhone 5
