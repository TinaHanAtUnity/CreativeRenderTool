/* Move this within correct scope */
@import "game-shared.styl";

#end-screen {
  .campaign-container {
    width: 100vw;
    height: 100vh;
  }

  .btn-close-region {
    position: fixed;
    top: 0;
    right: 0;
    z-index: 1;
    width: 55px;
    height: 55px;
  }

  a.btn-close {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1;
    width: 32px;
    height: 32px;
    color: $white;
    text-align: center;
    text-shadow: 2px 2px 20px $gray;
    font-size: 28px;
    line-height: 28px;
  }

  .game-background {
    position: fixed;
    top: 0;
    bottom: 47%;
    width: 100%;
    background-color: $black;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    &.brand {
      bottom: 0;
      background-size: contain;
    }
  }

  .end-screen-info-background {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 47%;
    border-top: 4px solid $end-screen-info-gray;
    background-color: $end-screen-info-white;

    &.dark {
      font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;

      @keyframes slideInUp {
        0% {
          -webkit-transform: translate3d(0, 200px, 0);
          transform: translate3d(0, 200px, 0);
        }

        40% {
          -webkit-transform: translate3d(0, -10px, 0);
          transform: translate3d(0, -10px, 0);
          opacity: .25;
        }

        100% {
          -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
          opacity: 1;
        }
      }

      .game-icon,
      .name-container,
      .store-container,
      .download-container {
        opacity: 0;
        animation-fill-mode: forwards;
        animation-timing-function: ease-out;
      }

      &.without-animation {
        .game-icon,
        .name-container,
        .store-container,
        .download-container {
          opacity: 1;
        }
      }

      &.animate {
        .game-icon,
        .name-container,
        .store-container,
        .download-container {
          animation-name: slideInUp;
        }

        .game-icon {
          animation-duration: .75s;
          animation-delay: 0s;
        }

        .name-container {
          animation-duration: .75s;
          animation-delay: .08s;
        }

        .store-container {
          animation-duration: .75s;
          animation-delay: .08s;
        }

        .download-container {
          animation-duration: .75s;
          animation-delay: .16s;
        }
      }

      .name-container,
      .game-rating-count {
        color: $white;
      }

      .game-rating-count {
        margin-left: 5pt;
      }

      .end-screen-underlay {
        width: 100vw;
        height: 100vh;
        filter: brightness(100%) blur(20px);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        transform: scale(1.5);

        &:before {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          background-image: linear-gradient(rgba(255, 255, 255, 0), $black 80%);
          content: "";
        }
      }

      .game-icon {
        top: -20pt;
        width: 115px;
        height: 115px;
      }

      .game-info {
        margin-left: 0;
      }

      .unityads-logo {
        background-image: url("../img/unityads-white.png");
      }

      .btn-download {
        margin: 12.5pt auto;
        padding: 5px;
        width: 50%;
        background: linear-gradient($dark-blue-gradient-light, $dark-blue-gradient-dark);
        font-weight: 600;
        font-size: 20pt;
      }
    }
  }

  .end-screen-info {
    position: absolute;
    top: 45%;
    width: 100%;
    transform: translate(0, -50%);

    .game-info {
      margin-left: 18px;
    }

    .game-icon {
      float: left;
    }

    .name-container {
      display: flex;
      padding: 8px 10px 0 10px;
      text-overflow: ellipsis;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2; // @stylint ignore
    }

    .store-container {
      display: flex;
      float: left;
      margin-top: 5px;
      margin-left: 10px;
      -webkit-box-align: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
    }

    .download-container {
      clear: both;
      text-align: center;
    }

    .btn-download {
      right: 0;
      left: 0;
      display: block;
      background: $blue;
      color: $white;
    }

    .privacy-button {
      position: absolute;
      bottom: 10px;
      left: 15px;
      color: $end-screen-info-gray;
      text-decoration: none;
      font-size: 22px;
    }

    .btn-download {
      margin: 45px 15px;
      padding: 10px;
      border-radius: 10px;
      font-size: 18pt;
      line-height: 24pt;
    }
  }
}

// END SCREEN landscape specific
body.landscape {
  #end-screen {
    .game-background-portrait,
    .underlay-portrait {
      display: none;
    }
    .game-background-landscape,
    .underlay-landscape {
      display: block;
    }

    .game-background {
      bottom: 0;
      width: 53%;
      &.brand {
        width: 100%;
      }
    }

    .end-screen-info-background {
      right: 0;
      width: 47%;
      height: 100%;
      border-top: none;
      border-left: 4px solid $end-screen-info-gray;

      &.dark {
        width: 100vw;
        height: 100vh;

        .end-screen-info {
          top: 45%;
          right: 0;
          bottom: 0;
          left: 0;
          margin: auto;
        }
      }

      .btn-download {
        font-size: 14pt;
      }
    }

    a.btn-close {
      color: $gray;
      text-shadow: 0 0 0 $end-screen-info-white;
    }

    .game-info {
      margin-left: auto;
    }

    .game-icon {
      position: absolute;
      right: 0;
      left: 0;
      margin: auto;
    }

    .name-container {
      display: flex;
      overflow: hidden;
      padding-top: 95px;
      text-align: center;
      text-overflow: ellipsis;
      font-size: 20pt;
      -webkit-line-clamp: 2; // @stylint ignore
      -webkit-box-orient: vertical;
    }

    .store-container {
      float: none;
      clear: both;
      margin: auto;
      padding-top: 0;
    }

    .btn-download {
      margin-top: 15px;
      padding: 5px 10px;
      font-size: 11pt;
    }
  }
}

// END SCREEN portrait specific
body.portrait {
  #end-screen {
    .game-background-portrait,
    .underlay-portrait {
      display: block;
    }
    .game-background-landscape,
    .underlay-landscape {
      display: none;
    }

    .end-screen-info-background.dark {
      width: 100vw;
      height: 100vh;

      .game-icon {
        float: none;
        margin: 15pt auto;
        width: 150px;
        height: 150px;
      }

      .name-container {
        text-align: center;
      }

      .store-container {
        float: none;
      }

      .btn-download {
        padding: 15px 10px;
        width: 75%;
        font-size: 18pt;
      }
    }
  }
}

// Device specific
body.iphone,
body.ipad,
body.android {
