@import "vars.styl";
@import "components.styl";

$end-screen-mixin($scale-size = $default-scale-size) {

  #end-screen {
    .btn-close-region {
      $close-button-default($scale-size);
      padding: $default-size * $scale-size * .25;
    }
    .download-container {
      $download-container-default($scale-size);
    }

    .game-rating {
      $game-rating-default($scale-size);
    }

    .game-rating-mask {
      $game-rating-mask-default($scale-size);
    }

    .game-rating-count {
      $game-rating-count-default($scale-size);
    }

    .game-icon {
      $game-icon-default($scale-size);
    }

    .unityads-logo {
      $unityads-logo-default($scale-size);
    }

    .name-container {
      $name-container-default($scale-size);
    }

    .privacy-button {
      $privacy-button-default($scale-size);
      margin: 0 0 0 $default-size * $scale-size * .25;
    }

    &.gdpr-pop-up-base .gdpr-pop-up,
    &.gdpr-pop-up-icon .gdpr-pop-up {
      $gdpr-pop-up($scale-size);
    }

    &:not(.gdpr-pop-up-base):not(.gdpr-pop-up-icon) {
      .gdpr-pop-up {
        display: none;
      }
    }

    .game-background-container {
      position: relative;
      width: 100%;
      height: 50%;
    }

    .game-background {
      width: 100%;
      height: 100%;
    }
  }

  body {
    &.portrait #end-screen {
      .column-container {
        margin-left: $default-size * $scale-size * .5;
      }

      .download-container {
        margin: $default-size * $scale-size * .75 auto;
      }
    }

    &.landscape #end-screen {
      .column-container {
        margin: $default-size * $scale-size * .5 0;
      }
      .btn-close-region {
        color: $gray;
      }
    }

    #end-screen {
      .store-container {
        margin-top: $default-size * $scale-size * .4;
      }

      .row-container {
        bottom: $default-size * $scale-size;
      }

      &.gdpr-pop-up-icon {
        .gdpr-pop-up {
          .gdpr-text {
            padding: $default-size * $scale-size * .5 $default-size * $scale-size * .5 $default-size * $scale-size * .5 0;
            width: 80%;
          }

          .gdpr-icon {
            $set-image(10%, $scale-size * $default-size, 0, "../img/gdpr-icon.png", contain);
          }
        }
      }

      /* TODO: Should go away once we finish with a/b test */
      &.use-gdpr-privacy-icon {
        .unityads-logo {
          bottom: $scale-size * $default-size * .5;
        }

        .privacy-button {
          margin: 0;
          padding: $scale-size * $default-size * .35 $scale-size * $default-size * .5;

          .icon-info {
            $icon-size = $scale-size * $default-size;
            $set-image($icon-size, $icon-size * 1.2, 0, "../img/gdpr-icon.png", contain);
            display: block;

            &:before {
              content: "";
            }
          }
        }
      }

    }
  }
}

body {

  &.portrait #end-screen {
    .game-background-portrait {
      display: block;
    }
    .game-background-landscape {
      display: none;
    }

    .row-container {
      display: flex;
      flex-direction: row;
      justify-content: center;
    }

    .column-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .end-screen-info-background {
      width: 100%;
      height: 50%;
    }

    .privacy-button {
      left: 0;
    }

    .game-icon {
      align-self: center;
    }
  }

  &.landscape #end-screen {
    .game-background-container {
      width: 50%;
      height: 100%;
    }

    .game-background-portrait {
      display: none;
    }
    .game-background-landscape {
      display: block;
    }

    .end-screen-info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;

      .game-icon {
        margin: 0 auto;
      }

    }

    .campaign-container {
      display: flex;
    }

    .end-screen-info-background {
      width: 50%;
      height: 100%;
      text-align: center;
    }

    .privacy-button {
      left: 50%;
    }

    .unityads-logo {
      width: 50%;
    }

    .gdpr-pop-up {
      left: 0;
    }
  }

  .row-container {
    position: relative;
  }
}

#end-screen {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;

  .campaign-container {
    width: 100%;
    height: 100%;
    background: $white;
  }

  .game-background {
    background-color: $black;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .end-screen-info-background {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
    height: 100%;
    justify-content: center;
    background-color: $end-screen-background-color;
  }

  &.gdpr-pop-up-icon {
    .gdpr-pop-up {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }

    &.gdpr-pop-up-position-bottom .gdpr-pop-up {
      top: initial;
      bottom: 0;
      transform: none;
    }
  }

}

$end-screen-mixin();
