#split-screen
  position: absolute
  top: 0
  left: 0
  background-color: transparent
  width: 100%
  height: 100%
  color: #FFF

  .video-overlay
    position: fixed
    top: 0
    height: 53%
    width: 100%
    background-color: transparent

  .video-overlay-full
    height: 100%

  .video-overlay-hidden
    display: none

  .header
  .footer
    position: absolute

  .split-end-screen
    position: fixed
    display: block
    top: 53%
    height: 47%
    width: 100%

  .split-end-screen-full
    display: block
    position: fixed
    top: 0
    height: 100%

  .split-end-screen-hidden
    display: none

  .game-background
    display: none
    top: 0
    width: 0
    height: 0

  .game-background-full
    display: block
    width: 100%
    height: 53%

  .end-screen-info-background
    position: absolute
    top: 0
    width: 100%
    height: 100%
    background-color: #fafafa

  .end-screen-info-background-full
    position: absolute
    top: 53%
    width: 100%
    height: 47%
    background-color: #fafafa

@-webkit-keyframes fade-in
  from
    opacity: 0
  to
    opacity: 1
