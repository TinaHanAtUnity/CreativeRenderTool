#split-screen
  position: absolute
  top: 0
  left: 0
  background-color: transparent
  width: 100%
  height: 100%
  color: #FFF

  .video-overlay
    position: fixed
    top: 0
    height: 53%
    width: 100%
    background-color: transparent

  .header
  .footer
    position: absolute

  .split-end-screen
    position: fixed
    display: block
    top: 53%
    height: 47%
    width: 100%

  .game-background
    display: none
    top: 0
    width: 0
    height: 0

  .end-screen-info-background
    position: absolute
    top: 0
    width: 100%
    height: 100%
    background-color: #fafafa

  .btn-close-region
    display: none

#split-screen.full-screen-video
  .video-overlay
    height: 100%

  .split-end-screen
    display: none

#split-screen.full-end-screen
  .btn-close-region
    display: block

  .video-overlay
    display: none

  .split-end-screen
    display: block
    position: fixed
    top: 0
    height: 100%

  .game-background
    display: block
    width: 100%
    height: 53%

  .end-screen-info-background
    position: absolute
    top: 53%
    width: 100%
    height: 47%
    background-color: #fafafa


@-webkit-keyframes fade-in
  from
    opacity: 0
  to
    opacity: 1
