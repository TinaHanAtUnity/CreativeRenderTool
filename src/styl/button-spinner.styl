#button-spinner {

  width: 100%;
  height: 2.25rem;

  margin: 0 0 .5rem 0;

  .wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .box {
    position: absolute;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
    border-top-right-radius: 30px;
    border-bottom-right-radius: 30px;
    width: 100%;
    height: 100%;
    background: #167dfb;
    animation: minimize 0.5s forwards ease-in;
  }


  .loader-container {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .loader {
    border: 4px solid rgba(255,255,255,0.1);
    border-radius: 50%;
    border-top: 4px solid white;
    width: 30px;
    height: 30px;
    /*-webkit-animation: spin 1s linear infinite; /* Safari */
    animation: spin 1s linear infinite;
    // background: #167dfb;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @keyframes minimize {
    from {
      left: 0%;
      width: 100%;
    }
    to {
      left: calc(50% - 19px);
      width: 38px;
      background: transparent;
    }
  }
}

