#privacy-captcha {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  text-align: left;
  cursor: pointer;

  .privacy-captcha-container {
    display: flex;
    flex-direction: column;
    width: 14.25 * $default-size;
    border-radius: .5 * $default-size;
    background: $white-smoke;
  }

  .privacy-captcha-title {
    padding: $default-size .5 * $default-size .5 * $default-size .5 * $default-size;
    border-bottom: 1px solid $consent-border-gray;
    border-radius: .5 * $default-size .5 * $default-size 0 0;
    background: $privacy-light-gray;
    font-weight: $privacy-title-font-weight;
    font-size: .65 * $default-font-size;
  }

  .privacy-captcha-grid-container {
    position: relative;
    width: 14.25 * $default-size;
    height: 14.25 * $default-size;
  }

  .privacy-captcha-grid {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: .5 * $default-size;
  }

  .privacy-captcha-grid > img {
    // todo: dynamic size (use vw or width: 20% padding-bottom: 20%)
    width: 3 * $default-size;
    height: 3 * $default-size;
  }

  .privacy-captcha-grid-item {
    border: 1px solid $consent-border-gray;
    border-radius: .25 * $default-size;
    background: $white;
  }

  .privacy-captcha-grid {
    display: grid;
    grid-gap: .25 * $default-size; // @stylint ignore;
    grid-template-columns: repeat(4, auto); // @stylint ignore;
  }


  .privacy-captcha-spinner-container {
    position: absolute;
    top: 0;
    display: none;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, .8);
    animation: show-up .2s forwards;

    &.show {
      display: block;
    }

    .privacy-captcha-spinner {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      margin: auto;
      width: 3 * $default-px-size;
      height: 3 * $default-px-size;
      border: .4 * $default-px-size solid rgba(226, 226, 226, .1);
      border-top: .4 * $default-px-size solid $gray;
      border-radius: 50%;
      animation: spin 1s ease-in infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    @keyframes show-up {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }

  }
}

body {
  &.landscape #privacy-captcha {

    .privacy-captcha-grid-item {
      width: 2.5 * $default-size;
      height: 2.5 * $default-size;
    }
  }
}
