body.alternative-layout.portrait {
    #end-screen {

        .campaign-container {
            background: black;
        }

        .square-end-screen .campaign-container {
            position: unset;
            display: unset;
            -webkit-box-orient: unset;
            -webkit-box-direction: unset;
            -ms-flex-direction: unset;
            flex-direction: unset;
            background-color: unset;
        }

        .btn-close-region {
            background: #ee66ee65;
        }

        .name-container {
            font-weight: bold;
            font-size: .85em;
            -webkit-box-orient: unset;
            max-width: unset;
        }

        .game-info-container {
            display: flex;
            align-items: center;
            margin: .5em 1em;
            padding: .4em;
            background-color: red;
            border-radius: .25em;
        }

        .game-icon {
            margin-bottom: 0;    
        }

        .game-text {
            padding: 0 1em;
        }

        .game-rating {
            margin-top: unset;
            display: flex;
            align-items: center;
        }

        .icon-star {
            margin-top: .3em;
        }

        .end-screen-info {
            width: 100%;
        }

        .download-container {
            margin: .5em 1em;
            width: unset;
            border-radius: 0.25em;
        }

        .store-container {
            display: flex;
            align-items: center;
        }

        .game-background-container {
            position: unset;
            width: 100%;
            height: 100%;
            background: no-repeat center center fixed; 
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            filter: blur(15px);
        }

        .end-screen-info-content {
            background: unset;
            width: 100%;
            height: 100%;    
            overflow: hidden;
            position: absolute;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            top: 0;
        }
    }
}