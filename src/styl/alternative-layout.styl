body.alternative-layout.portrait {
    #end-screen {

        .btn-close-region {
            display: inline-block;
            line-height: unset;
            width: unset;
            text-align: unset;
        }

        .campaign-container {
            background: black;
        }

        .square-end-screen .campaign-container {
            position: unset;
            display: unset;
            -webkit-box-orient: unset;
            -webkit-box-direction: unset;
            -ms-flex-direction: unset;
            flex-direction: unset;
            background-color: unset;
        }

        .name-container {
            font-weight: bold;
            font-size: .75em;
            -webkit-box-orient: unset;
            max-width: unset;
            text-align: left;
        }

        .game-info-container {
            display: flex;
            align-items: center;
            margin: .5em 1.5em;
            padding: .4em;
            background-color: red;
            border-radius: .25em;
        }

        .game-icon {
            margin-bottom: 0;    
        }

        .game-text {
            padding: 0 1em;
        }

        .game-rating {
            margin-top: unset;
            display: flex;
            align-items: center;
        }

        .icon-star {
            margin-top: .3em;
        }

        .end-screen-info {
            width: 100%;
            align-self: flex-end;
        }

        .download-container {
            margin: .5em 1.5em;
            width: unset;
            border-radius: 0.25em;
        }

        .store-container {
            display: flex;
            align-items: center;
        }

        .game-background-container {
            position: unset;
            width: 100%;
            height: 100%;
            background: no-repeat center center fixed; 
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            filter: blur(45px);
            z-index: unset;
        }

        .end-screen-info-content {
            background: unset;
            width: 100%;
            height: 100%;    
            overflow: hidden;
            position: absolute;
            top: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
        }

        .game-text-container {
            width: 100%;
            padding: .7em;
        }

        .end-screen-image-container {
            padding: 1.5em;

            .end-screen-image {
                border-radius: .25em;
                width: 100%;
            }
        }

        .unityads-logo {
            bottom: unset;
            left: unset;
            -webkit-box-orient: unset;
            -webkit-box-direction: unset;
            width: unset;
            text-align: right;
            -webkit-box-pack: unset;
            justify-content: unset;
            position: unset;
            z-index: unset;
            max-height: 1rem;
            color: white;
            font-size: 1.5rem;
            filter: unset;
            opacity: .4;
            margin: 0 1em;
        }

    }
}