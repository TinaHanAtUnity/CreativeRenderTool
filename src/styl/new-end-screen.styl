@import "placeholders.styl";

body {
  &.landscape {
    .game-background-portrait {
      display: none;
    }
    .game-background-landscape {
      display: block;
    }
  }

  &.portrait {
    .game-background-portrait {
      display: block;
    }
    .game-background-landscape {
      display: none;
    }
  }
}

#new-end-screen {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: transparent;

  .btn-close-region {
    @extend $close-button-default;
  }

  .campaign-container {
    width: 100%;
    height: 100%;
    background: $white;
  // display: flex;
  // flex-direction: column;
  }

  .game-background {
    width: 100%;
    height: 50%;
    background-color: $black;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .game-rating {
    @extend $game-rating-default;
  }

  .game-rating-mask {
    @extend $game-rating-mask-default;
  }

  .game-rating-count {
    @extend $game-rating-count-default;
  }

  .game-icon {
    @extend $game-icon-default;
  }

  .unityads-logo {
    @extend $unityads-logo-default;
  }

  .name-container {
    @extend $name-container-default;
  }


}
