@import "vars.styl";

$new-video-overlay-size = $default-scale-size * $default-size;
$new-video-overlay-font-size = $new-video-overlay-size;

$tab-font-color = "#f1f1f1";
$fade-transition = opacity .45s ease-in;

#end-screen {
  visibility: hidden;
}
#new-video-overlay {
  width: 100%;
  height: 100%;
  background-color: transparent;
  color: $white;
  transition: $fade-transition;

  &.fade-in .button {
    opacity: 1;
  }

  .button {
    position: absolute;
    top: 0;
    left: 0;
    width: $new-video-overlay-size * 2.5;
    height: $new-video-overlay-size * 2;
    opacity: 0;
  }

  .button-bottom {
    top: auto;
    bottom: 0;

    .tab {
      top: auto;
      bottom: $new-video-overlay-size * .3;
    }
  }

  .button-right {
    right: 0;
    left: auto;

    .tab {
      right: 0;
      left: auto;
      border-radius: .2rem 0 0 .2rem;
    }
  }

  .tab {
    position: absolute;
    top: $new-video-overlay-size * .3;
    left: 0;
    width: $new-video-overlay-size * 2;
    height: $new-video-overlay-size * 1.5;
    border-radius: 0 .2rem .2rem 0;
    background-color: rgba(0, 0, 0, .54);
    color: $tab-font-color;
    text-align: center;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, .8), 0 0 2px rgba(0, 0, 0, 1);
    font-weight: 300;
    font-size: $new-video-overlay-font-size * .55;
  }
  
  .skip-button .icon {
    opacity: .5;
  }

  .skip-button-enabled .icon {
    opacity: 1;
  }

  .call-button {
    opacity: 1;
    transform: translateX(100%);
    transition: transform .4s ease-in;
  }

  .show-call-button {
    transform: translateX(0%);
  }

  .call-button,
  .call-button .tab {
    width: 5.5rem;
  }

  .call-button .tab,
  .icon {
    line-height: $new-video-overlay-font-size * 1.58;
  }

  .icon-volume-mute {
    display: none;
  }

  .icon-volume {
    display: block;
  }

  .muted {
    .icon-volume-mute {
      display: block;
    }

    .icon-volume {
      display: none;
    }
  }

  .timer {
    position: relative;
    top: .2rem;
    left: .5rem;
    width: $new-video-overlay-size;
    height: $new-video-overlay-size;
    border: 2px solid $white;
    border-radius: 50%;
    font-size: $new-video-overlay-font-size * .45;
    line-height: 1rem;
  }
  

  .buffering-spinner {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: none;
    margin: auto;
    width: 100px;
    height: 65px;
  }

  .spinner-animation {
    margin: 0 auto;
    width: 24px;
    height: 24px;
    border: 4px solid $white;
    border-right-color: transparent;
    border-left-color: transparent;
    border-radius: 200px;
    animation: spinner 1s linear infinite;
  }

  .debug-message-text {
    position: absolute;
    top: 50%;
    right: 10px;
    display: none;
  }

  @keyframes spinner {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .spinner-text {
    margin-top: 10px;
    color: $white;
    text-align: center;
    text-shadow: 1px 1px $black;
    font-weight: bold;
  }
}

slide-animation($duration = .4s, $function = ease-in, $translation = 0) {
  transform: translateX($translation);
  transition: transform $duration $function;
}

.slide-in-from-left {
  slide-animation(.4s, ease-in, -100%);
}
