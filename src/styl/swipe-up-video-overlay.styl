@import "vars.styl";

#video-overlay {

  .swipe-up-zone-container {
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 60%;

    .swipe-up-zone {
      z-index: 500;
      display: flex;
      justify-content: center;
      align-items: flex-end;
      width: 80%;
      height: 100%;
    }

    .swipe-up-button {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-bottom: .5em;
      font-size: .9em;
      transform: translateY(150%);
      transition: transform .4s ease-in;
    }

    .show-swipe-up-button {
      transform: translateY(0%);
    }

    .swipe-up-download-text {
      text-shadow: 2px 2px 3px $black;
      font-size: .85em;
    }

    @keyframes arrow-jump {
      0%, 60%, 70%, 80%, 90%, 100% {
        transform: translateY(0em);
      }

      10%, 20%, 30%, 40%, 50% {
        transform: translateY(-.8em);
      }
    }
      
    @keyframes color-change {
      0%, 60%, 70%, 80%, 90%, 100% {
        fill: $white;
      }

      10%, 20%, 30%, 40%, 50% {
        fill: transparent;
      }
    }

    @keyframes background-color-change {
      0%, 60%, 70%, 80%, 90%, 100% {
        fill: transparent;
      }

      10%, 20%, 30%, 40%, 50% {
        fill: $white;
      }
    }

    svg {
      width: 1.5em;
      height: auto;
      border-radius: 75px;
      filter: drop-shadow(1px 1px 3px $black);
      animation: arrow-jump 3s infinite;
      animation-timing-function: ease-in-out;
      animation-delay: 5.5s;
    }

    .up-arrow-background {
      animation: background-color-change 3s infinite;
      animation-timing-function: ease-in-out;
      animation-delay: 5.5s;
      fill: transparent;
    }

    .up-arrow {
      animation: color-change 3s infinite;
      animation-timing-function: ease-in-out;
      animation-delay: 5.5s;
      fill: $white;
    }

  }
  
}
