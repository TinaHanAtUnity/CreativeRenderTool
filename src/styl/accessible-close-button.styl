@charset "UTF-8";

@font-face {
  font-family: "AccessibleCloseButton";
  src:url("../fonts/experiment/AccessibleCloseButton.eot");
  src:url("../fonts/experiment/AccessibleCloseButton.eot?#iefix") format("embedded-opentype"),
    url("../fonts/experiment/AccessibleCloseButton.woff") format("woff"),
    url("../fonts/experiment/AccessibleCloseButton.ttf") format("truetype"),
    url("../fonts/experiment/AccessibleCloseButton.svg#experiment") format("svg");
  font-weight: normal;
  font-style: normal;

}

$icon-size($n) {
	height: $n;
  width: $n;
}

.accessible-close-button {
	
	// Portrait view specific
	.portrait {
		#end-screen {
			.btn-close-region {
				padding: .6rem;
			}
			.icon-close {
				$icon-size(1.3rem);
			}
		}
	}

	// IOS Specific fix,
	// TODO: Find the platform agnostic solution for this one
	.ios-portrait,
	.ios-landscape-left,
	.ios-landscape-right {
		#end-screen {
			.icon-close:before {
				position: relative;
				top: 3%;
			}
		}
	}

	#end-screen {
		[data-icon]:before {
			font-family: "AccessibleCloseButton" !important;
			content: attr(data-icon);
			font-style: normal !important;
			font-weight: normal !important;
			font-variant: normal !important;
			text-transform: none !important;
			line-height: 1;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
		}

		[class^="experimental-"]:before,
		[class*=" experimental-"]:before {
			font-family: "AccessibleCloseButton" !important;
			font-style: normal !important;
			font-weight: normal !important;
			font-variant: normal !important;
			text-transform: none !important;
			line-height: 1;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
		}

		.icon-close:before {
			font-family: "AccessibleCloseButton" !important;
			display: block;
			content: "\e000";
		}

		.experimental-android:before {
			content: "\e001";
		}

		.btn-close-region {
			font-size: .6rem;
			z-index: 100;
			padding: 1.1rem;
			text-shadow: none;
			width: auto;
		}

		.icon-close {
			display: table-cell;
			vertical-align: middle;
			text-align: center;
			text-decoration: none;
			$icon-size(1.5rem);
			background: #fff;
			border-radius: 100%;
			line-height: 0;
			box-shadow: 0px 2px 4px rgba(12, 12, 12, 0.3);
			color: rgba(0, 0, 0, 0.6);
			opacity: 0.6;
		}
	}
}
