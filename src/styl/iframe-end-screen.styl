@import "components.styl";
@import "vars.styl";
@import "gdpr-pop-up.styl";

#container-iframe-end-screen {
  margin: 0;
  padding: 0;
  width: 100vw;
  height: 100vh;

  #iframe-end-screen {
    position: relative;
    display: block;
    width: 100vw;
    height: 100vh;
    border: none;
  }

  #iframe-end-screen.adjust-for-safe-area {
    top: env(safe-area-inset-top);
    right: env(safe-area-inset-right);
    bottom: env(safe-area-inset-bottom);
    left: env(safe-area-inset-left);

    width: calc(100vw - env(safe-area-inset-left) - env(safe-area-inset-right));
    height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  }

  .close-region {
    $iframe-close-region-default();
    top: env(safe-area-inset-top);
  }

  .icon-close {
    position: absolute;
    top: 5px;
    right: 2px;
    width: 32px;
    height: 32px;
    color: $white;
    text-align: center;
    text-shadow: $close-button-shadow;
    font-size: 28px;
    line-height: 28px;
  }

  .close {
    position: absolute;
    top: 50%;
    left: 8px;
    width: 36px;
    height: 36px;
    transform: translate(0, -50%);
  }

  .progress-wrapper {
    position: absolute;
    clip: rect(0px, 36px, 36px, 18px);
    width: 36px;
    height: 36px;
  }

  .progress:after {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    color: white;
    font-size: 18px;
    transform: translate(-50%, -50%);
  }

  .circle-base,
  .circle-left,
  .circle-right {
    position: absolute;
    width: 28px;
    height: 28px;
    border-radius: 100%;
    background-color: transparent;
    vertical-align: middle;
  }

  .circle-base {
    border: 4px solid $dark-gray;
  }

  .circle-left,
  .circle-right {
    clip: rect(0, 18px, 36px, 0);
    border: 4px solid $white;
  }

  .progress-wrapper,
  .circle-left,
  .circle-right {
    -webkit-animation-iteration-count: 1;

    -webkit-animation-fill-mode: forwards;

    -webkit-animation-timing-function: linear;

    -webkit-animation-duration: .01s;
  }

  .gdpr-pop-up {
    $gdpr-pop-up($default-scale-size, true);
    bottom: env(safe-area-inset-bottom);

    .icon-gdpr {
      position: absolute;
      left: 0;
      color: $white;
      opacity: 1;
    }
  }
}
