#privacy
  position: absolute
  top: 0
  left: 0
  background-color: rgba(0, 0, 0, 0.75)
  width: 100%
  height: 100%
  z-index: 100

  .pop-up
    padding: 10px 15px
    border-radius: 10px
    box-shadow: 0px 0px 5px #FFF
    border: 3px solid #FFF
    letter-spacing: 1px
    margin: 20px
    background-color: #FFF

  .privacy-text
  .privacy-simple-text
    line-height: 17px
    font-size: 12px
    text-align: justify
    color: #000

  .ok-button
    text-align: center
    padding: 5px
    margin: 5px 0
    border-radius: 10px
    font-size: 18px
    line-height: 20px
    color: #ffffff
    background: #167dfb
    color: #FFF