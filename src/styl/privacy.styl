#privacy {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .75);

  .pop-up {
    margin: 20px;
    padding: 10px 15px;
    border: 3px solid $white;
    border-radius: 10px;
    background-color: $white;
    box-shadow: 0 0 5px $white;
    letter-spacing: 1px;
  }

  .privacy-text,
  .privacy-simple-text {
    color: $black;
    text-align: justify;
    font-size: 12px;
    line-height: 17px;
  }

  .ok-button {
    margin: 5px 0;
    padding: 5px;
    border-radius: 10px;
    background: $blue;
    color: $white;
    text-align: center;
    font-size: 18px;
    line-height: 20px;
  }
}
