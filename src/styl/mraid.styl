    @keyframes progress-bar-dynamic {
      0% {
        left: 0;
      }
      15% {
        left: 10%;
        width: progress-bar-width * 0.25;
      }

      20% {
        width: progress-bar-width * 0.5;
      }

      50%{
        width: progress-bar-width * 0.3;
        left: 50%;
      }

      75% {
        width: progress-bar-width * 0.25;
        left: 60%;
      }

      100% {
        left: 100%;
      }
    }

