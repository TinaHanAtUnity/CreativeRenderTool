@import "vars.styl";
@import "mixins.styl";

/* End-screen */

$game-rating-default($scale-size, $with-styles = true) {
  font-size: $default-font-size * $scale-size * 1.5;
  if($with-styles) {
    position: relative;
    display: inline-block;
    color: $end-screen-info-gray;
    vertical-align: middle;
    letter-spacing: 5px;
    /* Required for all androids <= 4.3 */
    text-align: center;
  }
}

$game-rating-mask-default($scale-size, $with-styles = true) {
  position: absolute;
  left: 0;
  overflow: hidden;
  width: 0;
  height: 100%;
  color: $rating-orange;
  text-align: center;
  white-space: nowrap;
}

$game-rating-count-default($scale-size, $with-styles = true) {
  color: $gray;
  if($with-styles) {
    font-size: $default-font-size * $scale-size * .5;
  }
}

$game-icon-default($scale-size, $radius-size = .75, $with-styles = true) {
  $set-image($scale-size * $default-size, $scale-size * $default-size, $scale-size * $default-size * $radius-size);
}

$unityads-logo-default($scale-size) {
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  text-align: center;
  justify-content: center;

  if($with-styles) {
    position: absolute;
    z-index: 5;
    max-height: $scale-size * $default-size * 1;
    color: $unityads-logo-color;
    font-size: $default-font-size;
    opacity: .3;
  }

  &:after {
    content: "\e00b";
    font-family: "unityicons" !important; // @stylint ignore;
  }
}

$name-container-default($scale-size, $with-styles = true) {
  max-width: 85%;
  font-size: $scale-size * $default-font-size * 1;
  if($with-styles) {
    display: -webkit-box;
    overflow: hidden;
    color: $end-screen-game-name-color;
    text-align: center;
    text-overflow: ellipsis;

    -webkit-line-clamp: 2; // @stylint ignore;
    -webkit-box-orient: vertical;
  }
}

$close-button-width = 1.25;
$close-button-default($scale-size, $with-styles = true) {
  /*
    width is not necessarily, but requires for Android <= 4.3
    due to pseudo elements partial support, also width must be bigger than font-size
  */
  z-index: 100;
  width: $scale-size * $default-font-size * $close-button-width * 1.75;
  font-size: $scale-size * $default-font-size * $close-button-width;
  line-height: @width;
  if($with-styles) {
    position: absolute;
    right: 0;
    color: $white;
    text-align: center;
    text-shadow: $close-button-shadow;
  }
}

$download-container-default($scale-size, $with-styles = true) {
  padding: $scale-size * $default-size * .75 0;
  width: $scale-size * $default-size * 14;
  border-radius: $scale-size * $default-size * .75;
  font-size: $scale-size * $default-font-size * 1.25;

  if($with-styles) {
    background: $blue;
    color: $white;
    text-align: center;
  }

  &.disabled {
    background: rgba(128, 128, 128, .5) !important; // @stylint ignore
    pointer-events: none;
  }
}

$privacy-button-default($scale-size, $with-styles = true) {
  if($with-styles) {
    position: absolute;
    bottom: 0;
    z-index: 10;
    color: $end-screen-info-gray;
  }
}

/* MRAID iframe */

$iframe-default($with-styles = true) {
  if($with-styles) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    border: none;
  }
}

$iframe-close-region-default($with-styles = true) {
  if($with-styles) {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 9998;
    width: 50px;
    height: 50px;
    opacity: .4;
  }
}

$radio-group-container($scale-size = $default-scale-size, $context-font-size = 1rem) {
  $radio-group-default-size = $scale-size * $default-size;

  padding: $radio-group-default-size * .5;
  font-size: $context-font-size;

  [type="radio"]:checked,
  [type="radio"]:not(:checked) {
    position: absolute;
    visibility: hidden;
  }

  /* label text*/
  [type="radio"]:checked + label,
  [type="radio"]:not(:checked) + label {
    position: relative;
    padding-left: $radio-group-default-size * 1.5;
    cursor: pointer;
    line-height: $context-font-size * 1.5;
    display: inline-block;
  }

  [type="radio"]:checked + label:before,
  [type="radio"]:not(:checked) + label:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: $radio-group-default-size * .75;
    height: @width;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  [type="radio"]:checked + label:before {
    background-image: url('./../img/radio_on.png');
  }

  [type="radio"]:not(:checked) + label:before {
    background-image: url('./../img/radio_off.png');
  }

  [type="radio"]:checked + label {
    font-weight: 500;
  }

}

$china-overlay($scale-size = $default-scale-size) {
  position: fixed;
  display: none;
  padding: $default-scale-size * .7rem;
  color: $white;
  font-size: $default-scale-size * $default-font-size * .75;
}

$full-screen-pop-up-view($scale-size, z-index = auto, $with-styles = true) {
  $pop-up-size = $scale-size * $default-size;
  $pop-up-font-size = $scale-size * $default-font-size * .65;

  position: absolute;
  top: 0;
  left: 0;
  z-index: z-index;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  color: $privacy-text-color;
  font-weight: 300;
  font-size: $pop-up-font-size;

  $pop-up-height = 70%;
  $pop-up-content-height = $pop-up-height + 20%;
  $pop-up-footer-height = 100% - $pop-up-content-height;

  .pop-up {
    position: relative;
    margin: 5%;
    padding: $pop-up-size;
    width: 80%;
    height: $pop-up-height;
    border-radius: $pop-up-size * .25;
    background: $end-screen-background-color;

    $fade-out-gradient-height = $pop-up-size * 3;

    .fade-out-gradient-separator {
      position: absolute;
      bottom: 10%;
      left: 0;
      width: 100%;
      height: $fade-out-gradient-height;
      background: linear-gradient(to top, $end-screen-background-color 0, $end-screen-background-color 50%, rgba(250, 250, 250, 0) 100%);
    }

    .pop-up-content {
      overflow: auto;
      padding-right: $pop-up-size * .5;
      height: $pop-up-content-height;

      .header,
      .highlight {
        font-weight: 400;
      }

      .icon-gdpr {
        display: block;
        text-align: center;
        font-size: $default-size * $default-font-size * 2.5;
        opacity: .4;
      }

      .centered-title {
        display: block;
        text-align: center;
      }

      .title {
        margin-top: $pop-up-size * .5rem;
        margin-bottom: $pop-up-size;
        font-weight: 500;
        font-size: $pop-up-font-size * 1.1;
      }

      .header {
        display: block;
        margin: $pop-up-size 0 $pop-up-size * .5 0;
        font-size: $pop-up-font-size * 1.15;
      }

      p {
        line-height: $pop-up-font-size * 1.5;
      }

      .padding-block {
        min-height: $fade-out-gradient-height * 3.25;
      }

      .report-title {
        margin-top: $pop-up-size;
        margin-bottom: $pop-up-size;
        font-size: $pop-up-font-size * 1.5;
      }

      .report-dialog {
        display: block;
        text-align: center;
        font-style: italic;
        font-size: $pop-up-font-size;
      }

      .report-disclaimer {
          display: block;
          margin-top: $pop-up-size * .5;
          margin-bottom: $pop-up-size * .5;
          text-align: center;
          font-size: $pop-up-font-size * .6;
      }

      .report-container {
        height: $pop-up-size * 4.5rem;

        .report-button {
          display: inline-block;
          float: left;
          margin: $pop-up-size * .5;
          padding: $pop-up-size * .75 $pop-up-size * 1.5;
          border-radius: $pop-up-size * .25;
          background: $privacy-green;
          color: $white;
          font-size: $pop-up-font-size * 1.25;
        }

        .report-confirmed-text {
          display: inline-block;
          margin-top: $pop-up-size * .9;
          width: 50%;
          vertical-align: middle;
          text-align: center;
          font-size: $default-size * $default-font-size * .65;
          opacity: 0;
          transition: opacity $default-transition-ts ease-in;

          &.active {
            opacity: 1;
          }
        }
      }

      .radio-group-container {
        $radio-group-container($scale-size, $pop-up-font-size);

        .radio-item-container {
          margin: 0 auto;
          padding: $pop-up-size * .25;
          width: 85%;
        }
      }
    }

    .pop-up-footer {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      font-size: $pop-up-font-size * .75rem;

      .close-button {
        position: absolute;
        right: 0;
        bottom: 0;
        display: inline-block;
        margin: $pop-up-size * .5;
        padding: $pop-up-size * .75 $pop-up-size * 1.5;
        border-radius: $pop-up-size * .25;
        background: $blue;
        color: $white;
        font-weight: $privacy-title-font-weight;
        font-size: $pop-up-font-size * 1.25;
      }

      .middle-link,
      .left-side-link {
        bottom: 0;
        display: inline-block;
        margin-bottom: $pop-up-size * .5;
        margin-left: $pop-up-size * .5;
        width: 22%;
        color: $blue;
      }
    }

    .page-link {
      color: $blue;
      cursor: pointer;
    }
  }
}

$switch-group-container() {
  .switch-container {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: .5 * $default-size 0;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 46px;
    height: 28px;
  }

  .switch-label {
    position: relative;
    width: 80%;
  }

  [type="checkbox"]:checked,
  [type="checkbox"]:not(:checked) {
    position: absolute;
    visibility: hidden;
  }

  [type="checkbox"]:checked + label,
  [type="checkbox"]:not(:checked) + label {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #FAFAFA;
    border: 2px solid #E3E3E3;
    border-radius: 34px;
    transition: .15s ease-in-out;
  }

  [type="checkbox"]:checked + label:before,
  [type="checkbox"]:not(:checked) + label:before {
    position: absolute;
    content: "";
    height: 24px;
    width: 24px;
    background-color: white;
    border-radius: 50%;
    transition: .15s ease-in-out;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
  }

  [type="checkbox"]:checked + label:after,
  [type="checkbox"]:not(:checked) + label:after {
    position: absolute;
    content: "";
    width: 46px;
    height: 28px;
    margin: -2px;
    background: $privacy-light-gray;
    border-radius: 34px;
    transform:scale(1.4);
    opacity: 0;
    transition: .15s ease-in-out;
    z-index: -10;
  }

  [type="checkbox"]:checked + label {
    background-color: $consent-blue;
    border: 2px solid $consent-blue;
  }

  [type="checkbox"]:focus + label {
    box-shadow: 0 0 1px $consent-blue;
  }

  [type="checkbox"]:hover:active + label:after {
    opacity: 0.3;
  }

  [type="checkbox"]:checked + label:before {
    transform: translateX(18px);
  }
}

$click-animation() {
  span {
    display: block;
    animation: onagree .3s ease-in forwards;
  }

  @keyframes onagree {
    from {
      transform: translateX(0);

      opacity: 1;
    }

    to {
      transform: translateX(-8px);

      opacity: .25;
    }
  }
}

$privacy-back-button-default() {
  width: 2 * $default-size;
  color: $black;
  font-size: $privacy-heading-font-size;
}

$privacy-blue-button-default() {
  $consent-button-default();
  border: 1px solid $blue;
  background-color: $blue;
  color: $white;
}

$privacy-white-button-default() {
  $consent-button-default();
  border: 1px solid $privacy-light-gray;
  background-color: $white;
  color: $black;
}

$consent-button-default() {
  border-radius: $default-size * .4;
  text-align: center;
  font-weight: $privacy-title-font-weight;
  font-size: $privacy-heading-font-size;
}

$consent-privacy-close-button-default() {
  padding: .35 * $default-size $default-size;
  border-radius: 3 * $default-size;
  background: $privacy-close-button;
  color: $privacy-close-button-text;
  font-weight: $privacy-title-font-weight;
  font-size: $privacy-heading-font-size;
}

$ripple-button-default() {
  .ripple-button {
    position: relative;
    overflow: hidden;

    &::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: radial-gradient(circle, $privacy-light-gray 11%, transparent 11%);
      transform: scale(7.8, 7.8);
      opacity: 0;
      transition: transform 0.8s, opacity 0.8s;
    }

    &:hover:active {
      box-shadow: inset 0 0 0 1000px rgba(0,0,0,.2);
    }
  }
}
$ripple-circle-default() {
  .ripple-circle {
    position: relative;
    overflow: hidden;

    &:hover:active::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: radial-gradient(circle, $privacy-light-gray 22%, transparent 12%);
      border-radius: 50%
      opacity: 0.4;
      margin-top: 0.45rem
      margin-left: -0.67rem;
      z-index: -1;
    }
  }
}
$ripple-accordion-default() {
  .ripple-accordion {
    position: relative;
    overflow: hidden;

    &::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: radial-gradient(circle, $privacy-light-gray 10%, transparent 10%) no-repeat 50%;
      transform: scale(10, 10);
      opacity: 0;
      transition: transform 0.3s, opacity 0.3s;
    }

    &:hover:active::after {
      transform: scale(0, 0);
      opacity: 0.4;
      transition: background 0s;
    }
  }
}

