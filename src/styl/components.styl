@import "vars.styl";
@import "mixins.styl";

/* End-screen */

$game-rating-default($scale-size, $with-styles = true) {
  font-size: $default-font-size * $scale-size * 1.5;
  if($with-styles) {
    position: relative;
    display: inline-block;
    color: $end-screen-info-gray;
    vertical-align: middle;
    letter-spacing: 5px;
    /* Required for all androids <= 4.3 */
    text-align: center;
  }
}

$game-rating-mask-default($scale-size, $with-styles = true) {
  position: absolute;
  left: 0;
  overflow: hidden;
  width: 0;
  height: 100%;
  color: $rating-orange;
  text-align: center;
  white-space: nowrap;
}

$game-rating-count-default($scale-size, $with-styles = true) {
  color: $gray;
  if($with-styles) {
    font-size: $default-font-size * $scale-size;
  }
}

$game-icon-default($scale-size, $radius-size = .75, $with-styles = true) {
  $set-image($scale-size * $default-size * 4.5, $scale-size * $default-size * 4.5, $scale-size * $default-size * $radius-size);
}

$unityads-logo-default($scale-size, $with-styles = true) {
  $set-image(100%, $scale-size * $default-size, 0, "../img/unityads.png", contain);
  bottom: $scale-size * $default-size * .25;

  if($with-styles) {
    position: absolute;
    z-index: 5;
  }
}

$name-container-default($scale-size, $with-styles = true) {
  max-width: $default-size * $scale-size * 12.5;
  font-size: $scale-size * $default-font-size * 1.5;
  if($with-styles) {
    display: -webkit-box;
    overflow: hidden;
    color: $black;
    text-overflow: ellipsis;

    -webkit-line-clamp: 2; // @stylint ignore;
    -webkit-box-orient: vertical;
  }
}

$gdpr-pop-up($scale-size, $with-styles = true) {
  .gdpr-text {
    padding: $scale-size * $default-font-size * .5;
    font-size: $scale-size * $default-font-size * .5;
  }

  if($with-styles) {
    position: absolute;
    z-index: 100;
    width: 100%;
    background-color: $end-screen-background-color;
    box-shadow: 0 0 15px 0 rgba(0, 0, 0, .1);
    opacity: 1;

    .gdpr-text {
      z-index: 110;
      text-align: center;

      .gdpr-link {
        color: $blue;
      }
    }
  }
}

$close-button-width = 1.25;
$close-button-default($scale-size, $with-styles = true) {
  /*
    width is not necessarily, but requires for Android <= 4.3
    due to pseudo elements partial support, also width must be bigger than font-size
  */
  z-index: 100;
  width: $scale-size * $default-font-size * $close-button-width * 1.75;
  font-size: $scale-size * $default-font-size * $close-button-width;
  line-height: @width;
  if($with-styles) {
    position: absolute;
    right: 0;
    color: $white;
    text-align: center;
    text-shadow: 2px 2px 20px $gray;
  }
}

$download-container-default($scale-size, $with-styles = true) {
  padding: $scale-size * $default-size * .75 0;
  width: $scale-size * $default-size * 14;
  border-radius: $scale-size * $default-size * .75;
  font-size: $scale-size * $default-font-size * 1.25;

  if($with-styles) {
    background: $blue;
    color: $white;
    text-align: center;
  }
}

$privacy-button-default($scale-size, $with-styles = true) {
  if($with-styles) {
    position: absolute;
    bottom: 0;
    z-index: 10;
    color: $end-screen-info-gray;
  }
}

/* MRAID iframe */

$iframe-default($with-styles = true) {
  if($with-styles) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    border: none;
  }
}

$iframe-close-region-default($with-styles = true) {
  if($with-styles) {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 9999;
    width: 50px;
    height: 50px;
    opacity: .4;
  }
}

$radio-group-container($scale-size = $default-scale-size, $with-styles = false) {
  $radio-group-default-size = $scale-size * $default-size;

  [type="radio"]:checked,
  [type="radio"]:not(:checked) {
    position: absolute;
    visibility: hidden;
  }

  /* label text*/
  [type="radio"]:checked + label,
  [type="radio"]:not(:checked) + label {
    position: relative;
    padding-left: $radio-group-default-size * 1.5;
    cursor: pointer;
    line-height: $radio-group-default-size * .7;
    display: inline-block;
  }

  $radio-button-size = $radio-group-default-size * .75;
  $radio-border-size = $radio-group-default-size * .01;

  /* Radio button */
  [type="radio"]:checked + label:before,
  [type="radio"]:not(:checked) + label:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: $radio-button-size;
    height: $radio-button-size;
    border: $radio-border-size solid $privacy-green;
    border-radius: 100%;
  }

  /* Radio content */
  [type="radio"]:checked + label:after,
  [type="radio"]:not(:checked) + label:after {
    content: '';
    width: $radio-button-size * .575;
    height: $radio-button-size * .575;
    background: $privacy-green;
    position: absolute;
    top: $radio-button-size * .5 - @width * .5 - $radio-border-size * .5;
    left: $radio-button-size * .5 - @height * .5 - $radio-border-size * .5;
    border-radius: 100%;
    -webkit-transition: all 0.2s ease;
    transition: all 0.2s ease;
  }

  [type="radio"]:not(:checked) + label:after {
    opacity: 0;
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  [type="radio"]:checked + label:after {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  [type="radio"]:checked + label {
    font-weight: 500;
  }

}

$full-screen-pop-up-view($scale-size, z-index = auto, $with-styles = true) {
  $pop-up-size = $scale-size * $default-size;
  $pop-up-font-size = $scale-size * $default-font-size * .5;

  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  color: $privacy-text-color;
  font-weight: 300;
  font-size: $pop-up-font-size;

  $pop-up-height = 70%;
  $pop-up-content-height = $pop-up-height + 20%;
  $pop-up-footer-height = 100% - $pop-up-content-height;

  .pop-up {
    position: relative;
    margin: 5%;
    padding: $pop-up-size;
    width: 80%;
    height: $pop-up-height;
    border-radius: $pop-up-size * .25;
    background: $end-screen-background-color;

    .pop-up-content {
      overflow: auto;
      padding-right: $pop-up-size * 1.5;
      height: $pop-up-content-height;

      &:-webkit-scrollbar {
        -webkit-appearance: none;
        width: 7px;
      }

      &:-webkit-scrollbar-thumb {
        border-radius: 4px;
        background-color: rgba(0, 0, 0, .5);
        -webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .5);
      }

      .header,
      .highlight {
        font-weight: 500;
      }

      .title {
        margin-bottom: $pop-up-size;
        font-size: $pop-up-font-size * 1.5;
      }

      .header {
        display: block;
        margin: $pop-up-size 0 $pop-up-size * .5 0;
        font-size: $pop-up-font-size * 1.25;
      }

      p {
        line-height: $pop-up-size * .7;
      }

      .radio-group-container {
        $radio-group-container($scale-size);

        .radio-item-container {
          margin: 0 auto;
          padding: $pop-up-size * .25;
          width: 70%;
        }
      }
    }

    .pop-up-footer {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;

      .close-button {
        position: absolute;
        right: 0;
        bottom: 0;
        display: inline-block;
        margin: $pop-up-size * .5;
        padding: $pop-up-size * .75 $pop-up-size * 1.5;
        border-radius: $pop-up-size * .25;
        background: $blue;
        color: $white;
        font-size: $pop-up-font-size * 1.25;
      }

      .left-side-link {
        position: absolute;
        bottom: 0;
        display: inline-block;
        margin: $pop-up-size * .5;
        color: darken($end-screen-info-gray, 40%);
      }
    }
  }
}

