.progress-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: .14em;
    background: #00292E;
 .progress-bar {
    width: 0;
    background-color: #009BE0;
    height: 100%;
    position: absolute;
  }
    .progress-bar:after {
    content: '';
    position: absolute;
    left: calc(100% - 0.14em);
    top: 0;
    width: 0;
    height: 0;
    border-left: 0.14em solid transparent;
    border-right: 0.14em solid transparent;
    border-top: 0.14em solid #009BE0;    }
}
