@import "vars.styl";

.progress-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: .14em;
    background: $semi-transparent-background;
    overflow: hidden;
  .progress-bar {
    position: absolute;
    width: 0;
    height: 100%;
    background-color: $blue;
  }
  .progress-bar:after {
    position: relative;
    top: 0;
    right: -100%;
    width: 0;
    height: 0;
    border-top: .14em solid $blue;
    border-right: .14em solid transparent;
    content: "";
    display: block;
  }
}
