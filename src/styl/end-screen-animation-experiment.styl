transitionMixin(position) {
    transition: position .8s cubic-bezier(.215, .61, .355, 1); // easeInOutQuad
}

$dark-cover = #0c292f;

.animated-video-overlay-experiment {
    #end-screen {
        &.on-show {
            overflow: hidden;
        }
        .campaign-container {
            background: none;
        }
        .campaign-container:before {
            position: absolute;
            width: 100%;
            height: 100%;
            background: $dark-cover;
            content: "";
            opacity: 0;
            transitionMixin(opacity);
        }
    }
    #end-screen.on-show .campaign-container:before {
        content: "";
        opacity: 1;
    }

    &.portrait {
        #end-screen .game-background-container {
            top: -50%;
            transitionMixin(top);
        }

        #end-screen.on-show .game-background-container {
            top: 0;
        }

        #end-screen .end-screen-info-background {
            bottom: -50%;
            transitionMixin(bottom);
        }

        #end-screen.on-show .end-screen-info-background {
            bottom: 0;
        }
    }

    $.landscape {
        #end-screen .game-background-container {
            left: -50%;
            transitionMixin(left);
        }

        #end-screen.on-show .game-background-container {
            left: 0;
        }

        #end-screen .end-screen-info-background {
            right: -50%;
            transitionMixin(right);
        }

        #end-screen.on-show .end-screen-info-background {
            right: 0;
        }
    }
}
