@keyframes animated-download-button-heartbeat {
  from, 100% {
    background: $blue;
    transform: scale(1);
    transform-origin: center center;
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease;
  }

  10% {
    background: rgb(72, 154, 255);
    transform: scale(1.1);
    box-shadow: 0 18px 5px -14px rgba(30, 54, 82, .8);
    animation-timing-function: ease;
  }

  20% {
    background: $blue;
    transform: scale(.95);
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease;
  }

  30% {
    background: rgb(72, 154, 255);
    transform: scale(1.05);
    box-shadow: 0 16px 5px -12px rgba(30, 54, 82, .8);
    animation-timing-function: ease;
  }

  40% {
    background: $blue;
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease-out;
  }
}

@keyframes animated-download-button-blink {
  from, 50%, 100% {
    background: $blue;
    box-shadow: none;
    color: $white;
  }

  25% {
    background: $white;
    box-shadow: 0 0 1px 1px $blue inset;
    color: $blue;
  }
}

@keyframes animated-download-button-bounce {
  from {
    transform: translateY(0) rotateZ(0);
  }

  10% {
    animation-timing-function: ease-in;
    transform: translateY(-.5em) rotateZ(-5deg);
  }

  20% {
    animation-timing-function: ease-in;
    transform: translateY(-1em) rotateZ(5deg);
  }

  35% {
    animation-timing-function: ease-in;
    transform: translateY(0) rotateZ(0);
    
  }

  45%, 55%, 100% {
    animation-timing-function: cubic-bezier(.215, .61, .355, 1);
    transform: translate3d(0, 0, 0);
  }

  40% {
    animation-timing-function: cubic-bezier(.755, .05, .855, .06);
    transform: translate3d(0, -.15em, 0);
  }

  50% {
    animation-timing-function: cubic-bezier(.755, .05, .855, .06);
    transform: translate3d(0, -.05em, 0);
  }
}

@keyframes animated-download-button-bounce-shadow {
  0%, 30%, 100% {
    transform: scale(1);
  }

  10% {
    transform: scale(.8);
  }

  20% {
    transform: scale(.6);
  }
}

@keyframes animated-download-button-sheen {
  from {
    transform: skewX(-30deg) translateX(0);
  }

  30%, 100% {
    transform: skewX(-30deg) translateX(14em);
  }
}

.heartbeating-download-button-end-screen #end-screen.on-show {
  .download-container {
    animation: animated-download-button-heartbeat 2s ease-in 1s infinite both;
  }
}

.blinking-download-button-end-screen #end-screen.on-show {
  .download-container {
    animation: animated-download-button-blink 2s ease 1s infinite both;
  }
}

.bouncing-download-button-end-screen #end-screen.on-show {
  .column-container {
    position: relative;
  }

  .download-container {
    z-index: 1;
    animation: animated-download-button-bounce 2s ease 1s infinite both;
  }

  .download-container-shadow {
    position: absolute;
    bottom: -.15em;
    z-index: 0;
    width: 11.2em;
    height: .4em;
    background: radial-gradient(closest-side, $gray, transparent);
    opacity: .6;
    animation: animated-download-button-bounce-shadow 2s linear 1s infinite both;
  }
}

.shining-download-button-end-screen #end-screen.on-show {
  .download-container {
    position: relative;
    overflow: hidden;
  }

  .download-container:before {
    position: absolute;
    top: 0;
    left: -2em;
    display: block;
    width: 1.5em;
    height: 100%;
    background-color: rgba(255, 255, 255, .5);
    content: "";
    animation: animated-download-button-sheen 2s linear 1s infinite both;
  }
}

