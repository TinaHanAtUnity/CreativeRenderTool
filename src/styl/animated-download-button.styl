@keyframes animated-download-button-heartbeat {
  from, 100% {
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease;
    transform: scale(1);
    transform-origin: center center;
  }

  10% {
    box-shadow: 0 18px 5px -14px rgba(30, 54, 82, .8);
    animation-timing-function: ease;
    transform: scale(1.1);
  }

  20% {
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease;
    transform: scale(.95);
  }

  30% {
    box-shadow: 0 16px 5px -12px rgba(30, 54, 82, .8);
    animation-timing-function: ease;
    transform: scale(1.05);
  }

  40% {
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease-out;
    transform: scale(1);
  }
}

@keyframes animated-download-button-bounce {
  from {
    transform: translateY(0) rotateZ(0);
  }

  10% {
    animation-timing-function: ease-in;
    transform: translateY(-.5em) rotateZ(-5deg);
  }

  20% {
    animation-timing-function: ease-in;
    transform: translateY(-1em) rotateZ(5deg);
  }

  35% {
    animation-timing-function: ease-in;
    transform: translateY(0) rotateZ(0);
  }

  45%, 55%, 100% {
    animation-timing-function: cubic-bezier(.215, .61, .355, 1);
    transform: translate3d(0, 0, 0);
  }

  40% {
    animation-timing-function: cubic-bezier(.755, .05, .855, .06);
    transform: translate3d(0, -.15em, 0);
  }

  50% {
    animation-timing-function: cubic-bezier(.755, .05, .855, .06);
    transform: translate3d(0, -.05em, 0);
  }
}

@keyframes animated-download-button-bounce-shadow {
  0%, 30%, 100% {
    transform: scale(1);
  }

  10% {
    transform: scale(.8);
  }

  20% {
    transform: scale(.6);
  }
}

@keyframes animated-download-button-sheen {
  from {
    transform: skewX(-30deg) translateX(0);
  }

  30%, 100% {
    transform: skewX(-30deg) translateX(14em);
  }
}

#end-screen.on-show {
  &.heartbeating-download-button-end-screen {
    .download-container {
      animation: animated-download-button-heartbeat 2s ease-in 1s infinite both;
    }
  }

  &.bouncing-download-button-end-screen {
    .column-container {
      position: relative;
    }

    .download-container {
      z-index: 1;
      animation: animated-download-button-bounce 2s ease 1s infinite both;
    }

    .download-container-shadow {
      position: absolute;
      bottom: -.15em;
      z-index: 0;
      width: 11.2em;
      height: .4em;
      background: radial-gradient(closest-side, $gray, transparent);
      opacity: .6;
      animation: animated-download-button-bounce-shadow 2s linear 1s infinite both;
    }

    &.bouncing-download-button-end-screen-square {
      .download-container-shadow {
        bottom: .25em;
      }
    }
  }

  &.shining-download-button-end-screen {
    .download-container {
      position: relative;
      overflow: hidden;

      // This fixes a bug on ios where the "shining" object
      // would overflow even though overflow: hidden is set,
      // It has something to do with overflow and the border
      // radius on the download button
      transform: translateZ(0);
    }

    .download-container:before {
      position: absolute;
      top: 0;
      left: -2em;
      display: block;
      width: 1.5em;
      height: 100%;
      background-color: rgba(255, 255, 255, .5);
      content: "";
      animation: animated-download-button-sheen 2s linear 1s infinite both;
    }
  }
}
