@keyframes heartbeat {
  from {
    background: $blue;
    transform: scale(1);
    transform-origin: center center;
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease;
  }

  4% {
    background: rgb(72, 154, 255);
    transform: scale(1.1);
    box-shadow: 0 18px 5px -14px rgba(30, 54, 82, .8);
    animation-timing-function: ease;
  }

  8% {
    background: $blue;
    transform: scale(.95);
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease;
  }

  12% {
    background: rgb(72, 154, 255);
    transform: scale(1.05);
    box-shadow: 0 16px 5px -12px rgba(30, 54, 82, .8);
    animation-timing-function: ease;
  }

  18% {
    background: $blue;
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(30, 54, 82, 0);
    animation-timing-function: ease-out;
  }
}

.animated-download-button-end-screen #end-screen.on-show .download-container {
  animation: heartbeat 6.5s ease-in .5s infinite;
}
