@import "vars.styl";

#end-screen.square-end-screen {
  .campaign-container {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .privacy-button {
    bottom: 0;
    left: 0;
  }

  .game-image {
    width: 100%;
    height: 100%;
    background-color: transparent;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
  }

  .game-background-blurred {
    position: absolute;
    display: block;
    margin: 0;
    width: 100%;
    height: 100%;
    filter: blur(10px) brightness(.8) opacity(.28) grayscale(1);
    transform: scale(1.4);
    background-color: transparent;
    background-size: cover;
  }

  &.old-androids {
    .game-background-blurred {
      display: none;
    }

    .game-image {
      background-color: $light-gray;
    }
  }

  .end-screen-info-background {
    position: relative;
    z-index: 6;
    flex-grow: 1;
    width: auto;
    background-color: $end-screen-background-color;
  }
}

&.landscape #end-screen.square-end-screen {
  .campaign-container {
    flex-direction: row;
  }

  .privacy-button {
    left: 0;
  }
}

