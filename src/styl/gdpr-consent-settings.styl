@import "components.styl";

#gdpr-consent-settings {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: $white;

  &.prevent-clicks {
    pointer-events: none;
  }

  .safe-area-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .back-button {
    display: flex;
    align-items: center;
    padding: $default-size 2 * $default-size;
    width: 2 * $default-size;
    height: 6%;
    color: $black;
    font-size: $privacy-text-font-size;
    opacity: .5;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    padding: 0 2 * $default-size $default-size 2 * $default-size;
    height: 92%;
  }

  .personalization-container {
    flex: 0 1 40%;
    overflow: auto;

    .privacy-info-title {
      font-weight: $privacy-title-font-weight;
    }

    .privacy-info-description {
      color: $privacy-text-color;
      text-align: justify;
      font-weight: $privacy-text-font-weight;
      font-size: $default-font-size * .65;
    }
  }

  .info-container {
    position: relative;
  }

  .stripe {
    margin: .25 * $default-size 1.5 * $default-size .25 * $default-size 1.5 * $default-size;
    height: 1px;
    background-color: $light-gray;
  }

  .settings-container {
    display: flex;
    flex: 0 1 40%;
    flex-direction: column;
    justify-content: space-evenly;
  }

  .accept-all {
    margin-bottom: .25 * $default-size;
    border: 1px solid $blue;
    background-color: $blue;
    color: $white;
  }

  .consent-button {
    position: relative;
    border: 1px solid $white-smoke;
    border-radius: $default-size * .25;
    font-weight: $privacy-text-font-weight;
    font-size: $privacy-text-font-size;

    &.click-animation {
      $click-animation();
    }
  }
  .item {
    padding: .75 * $default-size $default-size;
    text-align: center;
  }

  .checkbox-group-container {
    $checkbox-group-container($default-scale-size, $privacy-text-font-size);
  }
}

body {
  &.landscape #gdpr-consent-settings {

    .back-button {
      display: flex;
      align-items: center;
      padding: $default-size 4 * $default-size;
      width: 2 * $default-size;
      height: 6%;
      color: $black;
      font-size: $privacy-text-font-size;
      opacity: .5;
    }

    .wrapper {
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      align-items: center;
    }
    .personalization-container {
      flex: 0 1 40%;
      align-self: flex-start;
      margin-right: $default-size;
    }

    .stripe {
      position: absolute;
      display: block;
      margin: $default-size 0;
      width: 1px;
      background-color: $white-smoke;
      // todo: find a better way to set the top position
    }

    .settings-container {
      flex: 0 1 40%;
      align-self: flex-start;
      margin-left: $default-size;
    }
  }
}
