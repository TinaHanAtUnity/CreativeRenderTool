#gdpr-consent-settings {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: $white;
  overflow: hidden;

  .container {
    padding: $default-size;
  }

  .personalization-container {
    height: 50%;
    overflow: auto;

    .privacy-info-title {
      padding-top: $default-size;
      font-weight: 500;
    }

    .privacy-info-description {
      font-size: $default-size * .65;
      text-align: justify;
      color: $privacy-text-color;
      font-weight: 300;
    }
  }

  .info-container {
    position: relative;
  }

  .stripe {
    position: relative;
    height: 1px;
    margin: 0 $default-size 0 $default-size;
    background-color: $light-gray;
  }

  .settings-container {
    postion: absolute;
    top: 50%;
    width: 100%;
    height: 50%;

  }
}