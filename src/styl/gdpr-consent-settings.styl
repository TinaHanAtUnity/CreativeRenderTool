@import "components.styl";

#gdpr-consent-settings {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: $white;
  font-size: $privacy-text-font-size;

  &.prevent-clicks {
    pointer-events: none;
  }

  .safe-area-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .back-button {
    position: relative;
    padding: .5 * $default-size 0 $default-size 0;
    width: 2 * $default-size;
    color: $black;
  }

  .wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 0 2 * $default-size $default-size;
    height: 100%;
  }

  .description {
    color: $privacy-text-color;
    text-align: left;
    font-weight: $privacy-text-font-weight;
  }

  .heading {
    display: block;
    font-weight: 400;
  }

  .personalization-container {
    flex: 0 1 50%;
    overflow: auto;

    .privacy-info-title {
      font-weight: $privacy-title-font-weight;
    }
  }

  .info-container {
    position: relative;
  }

  .stripe {
    margin: .1 * $default-size 0 0 0;
    height: 1px;
    background-color: $light-gray;
  }

  .settings-container {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    justify-content: center;
  }

  .accept-all {
    margin-bottom: .25 * $default-size;
    border: 1px solid $blue;
    background-color: $blue;
    color: $white;
  }

  .consent-button {
    position: relative;
    border: 1px solid $white-smoke;
    border-radius: $default-size * .25;
    font-weight: $privacy-text-font-weight;

    &.click-animation {
      $click-animation();
    }
  }
  .item {
    padding: .75 * $default-size $default-size;
    text-align: center;
  }

  .checkbox-group-container {
    $checkbox-group-container($default-scale-size, $privacy-text-font-size);
  }
}

body {
  &.landscape #gdpr-consent-settings {
    .back-button {
      top: $default-size;
      left: 5%
      position: absolute;
      width: $default-size;
      height: $default-size;
      color: $black;
      padding: 0;
    }

    .safe-area-content {
      padding: auto;
    }

    .wrapper {
      display: block;
      width: 100%;
      height: 100%;
      padding: 0;
    }
    .personalization-container {
      position: absolute;
      display: block;
      left: 5%;
      top: 3 * $default-size;
      width: 40%;
      height: "calc(100% - 3 * %s)" % $default-size;
    }

    .stripe {
      position: absolute;

      left: 50%;
      top: 3 * $default-size;
      display: block;
      width: 1px;
      height: "calc(100% - 3 * %s)" % $default-size;
      background-color: $white-smoke;
    }

    .settings-container {
      position: absolute;
      display: block;
      left: 55%;
      top: 3 * $default-size;
      width: 40%;
      height: 100%;
    }
  }
}
