#overlay
  background-color: transparent
  width: 100%
  height: 100%
  color: #FFF

  .header
    position: absolute
    top: 0%
    width: 100%
    height: 10%
    background: rgba(0, 0, 0, 0.5)

    .skip-button
      position: absolute
      top: 50%
      left: 2%
      -webkit-transform: translate(0,-50%)
      text-decoration: none;

    .skip-duration
      font-weight: bold

    .call-button
      display: none
      position: absolute
      top: 50%
      right: 2%;
      -webkit-transform: translate(0,-50%)
      border: none;

  .footer
    position: absolute
    bottom: 0%
    width: 100%
    height: 10%
    background: rgba(0, 0, 0, 0.5)

    .mute-button
      position: absolute
      display: none
      left: 2%
      top: 50%
      -webkit-transform: translate(0,-50%)

      .mute-icon
      .unmute-icon
        font-size: 27px

      .unmute-icon
        display: none

      &.muted
        .mute-icon
          display: none

        .unmute-icon
          display: block

    .video-duration-text
      position: absolute
      display: none
      -webkit-transform: translate(0,-50%)
      right: 2%
      top: 50%
      text-align: right

      .video-duration
        font-weight: bold

  .buffering-spinner
    display: none
    position: absolute
    margin: auto
    top: 0
    left: 0
    bottom: 0
    right: 0
    width: 100px
    height: 65px

  .spinner-animation
    width: 24px
    height: 24px
    margin: 0 auto
    border: 4px solid #fff
    border-left-color: transparent
    border-right-color: transparent
    border-radius: 200px
    -webkit-animation: spinner 1s linear infinite

  .debug-message-text
    display: none
    position: absolute
    top: 50%
    right: 10px

  @-webkit-keyframes spinner
    from
      -webkit-transform: rotate(0deg)
    to
      -webkit-transform: rotate(360deg)

  .spinner-text
    margin-top: 10px
    text-align: center
    color: #FFF
    font-weight: bold
    text-shadow: 1px 1px #000

.fade
  opacity: 0
  transition: opacity 1s ease-in-out
