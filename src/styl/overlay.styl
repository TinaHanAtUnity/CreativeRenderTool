@import "components.styl";
@import "vars.styl";
@import "icons.styl";

#overlay {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: transparent;
  color: $white;
  pointer-events: none;

  .skip-hit-area {
    position: fixed;
    top: 0;
    left: 0;
    width: 70px;
    height: 55px;
    pointer-events: auto;
  }

  .skip {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 36px;
    height: 36px;
  }

  .close-icon,
  .skip-icon {
    position: absolute;
    top: 50%;
    left: 15%;
    width: 27px;
    height: 29px;
    font-size: 27px;
    transform: translate(0, -50%);
  }

  .skip {
    .circle-left,
    .circle-right {
      border: 4px solid $overlay-gray;
    }

    .close-icon,
    .skip-icon {
      color: $overlay-gray;
    }
  }

  .skip.enabled {
    .circle-left,
    .circle-right {
      border: 4px solid $white;
    }

    .close-icon,
    .skip-icon {
      color: $white;
    }
  }

  .skip:not(.close-icon-skip) {
    .skip-icon {
      display: block;
    }
    .close-icon {
      display: none;
    }
  }

  .skip.close-icon-skip {
    .skip-icon {
      display: none;
    }
    .close-icon {
      display: block;
    }
  }

  .mute-button {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 70px;
    height: 55px;
    pointer-events: auto;

    .mute-icon,
    .unmute-icon {
      position: absolute;
      bottom: 10px;
      left: 10px;
      height: 27px;
      font-size: 27px;
    }

    .unmute-icon {
      display: none;
    }

    &.muted {
      .mute-icon {
        display: none;
      }

      .unmute-icon {
        display: block;
      }
    }
  }

  .call-button {
    position: fixed;
    right: 10px;
    bottom: 0;
    display: none;
    font-weight: bold;
    transform: translate(0, -50%);
    pointer-events: auto;
  }

  .buffering-spinner {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: none;
    margin: auto;
    width: 100px;
    height: 65px;
  }

  .spinner-animation {
    margin: 0 auto;
    width: 24px;
    height: 24px;
    border: 4px solid $white;
    border-right-color: transparent;
    border-left-color: transparent;
    border-radius: 200px;
    animation: spinner 1s linear infinite;
  }

  .debug-message-text {
    position: absolute;
    top: 50%;
    right: 10px;
    display: none;
    pointer-events: auto;
  }

  @keyframes spinner {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .spinner-text {
    margin-top: 10px;
    color: $white;
    text-align: center;
    text-shadow: 1px 1px $black;
    font-weight: bold;
  }

  .progress {
    position: fixed;
    top: 0;
    right: 0;
    display: none;
    padding: 10px;
    width: 36px;
    height: 36px;
  }

  .progress-wrapper {
    position: absolute;
    clip: rect(0, 36px, 36px, 18px);
    width: 36px;
    height: 36px;
  }

  .progress:after {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    color: $white;
    content: attr(data-seconds);
    font-size: 18px;
    transform: translate(-50%, -50%);
  }

  .circle-base,
  .circle-left,
  .circle-right {
    position: absolute;
    width: 28px;
    height: 28px;
    border-radius: 100%;
    background-color: transparent;
    vertical-align: middle;
  }

  .circle-base {
    border: 4px solid rgba(105, 105, 105, .4);
  }

  .circle-left,
  .circle-right {
    clip: rect(0px, 18px, 36px, 0);
    border: 4px solid $white;
  }

  .progress-wrapper,
  .circle-left,
  .circle-right {
    animation-duration: .01s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-timing-function: linear;
  }

  .gdpr-pop-up {

    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: $dark-gdpr-banner;
    box-shadow: 0 0 15px 0 rgba(0, 0, 0, .1);
    pointer-events: auto;

    .gdpr-text {
      z-index: 110;
      padding: $default-scale-size * $default-font-size * .5;
      color: $white;
      text-align: center;
      font-size: $default-scale-size * $default-font-size * .5;

      .gdpr-link {
        color: $blue;
      }
    }
  }

  .privacy-button {
    position: fixed;
    bottom: 4px;
    left: 50%;
    margin: 0 0 0 -13px;
    pointer-events: auto;

    .icon-gdpr {
      color: white;
    }
  }

  .tencent-advertisement {
    $tencent-overlay($default-scale-size);
  }
}

.fade {
  opacity: 0;
  transition: opacity .45s ease-in-out;
}

slide-animation($duration = .4s, $function = ease-in, $translation = 0) {
  transform: translateY($translation);
  transition: transform $duration $function;
}

.slide-up {
  slide-animation(.4s, ease-in, -150%);
}

.slide-down {
  slide-animation(.4s, ease-in, 150%);
}

.slide-back-in-place {
  slide-animation(.2s, ease-in-out, 0);
}

@keyframes right-spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(180deg);
  }
}

@keyframes left-spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes close-progress-wrapper {
  to {
    clip: rect(auto, auto, auto, auto);
  }
}
