#overlay
  background-color: transparent
  width: 100%
  height: 100%
  color: #FFF
  text-shadow: 1px 1px #000

  .skip-button
    display: none
    position: absolute
    top: 10px
    left: 10px

    .skip-duration
      font-weight: bold

  .mute-button
    display: none
    position: absolute
    left: 10px
    bottom: 10px

    .mute-icon
    .unmute-icon
      font-size: 27px

    .unmute-icon
      display: none

    &.muted
      .mute-icon
        display: none

      .unmute-icon
        display: block

  .video-duration-text
    display: none
    position: absolute
    bottom: 10px
    right: 10px

    .video-duration
      font-weight: bold

  .buffering-spinner
    display: none
    position: absolute
    margin: auto
    top: 0
    left: 0
    bottom: 0
    right: 0
    width: 100px
    height: 65px

  .spinner-animation
    width: 24px
    height: 24px
    margin: 0 auto
    border: 4px solid #fff
    border-left-color: transparent
    border-right-color: transparent
    border-radius: 200px
    -webkit-animation: spinner 1s linear infinite

  .debug-message-text
    display: none
    position: absolute
    top: 10px
    right: 10px

  @-webkit-keyframes spinner
    from
      -webkit-transform: rotate(0deg)
    to
      -webkit-transform: rotate(360deg)

  .spinner-text
    margin-top: 10px
    text-align: center
    color: #FFF
    font-weight: bold
    text-shadow: 1px 1px #000
