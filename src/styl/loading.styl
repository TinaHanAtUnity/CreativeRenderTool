.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-right: -50%;
  transform: translate(-50%, -50%);

  .spinner-animation {
    margin: 0 auto;
    width: 24px;
    height: 24px;
    border: 4px solid $white;
    border-right-color: transparent;
    border-left-color: transparent;
    border-radius: 200px;
    animation: spinner 1s linear infinite;
  }
  .spinner-text {
    margin-top: 10px;
    color: $white;
    text-align: center;
    text-shadow: 1px 1px $black;
    font-weight: bold;
  }
}
