@import "components.styl";

#consent {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: transparent;
  color: $consent-text-font-color;
  font-size: $consent-text-font-size;

  &.prevent-clicks {
    pointer-events: none;
  }

  &.old-androids {
    .consent-button-container {
      position: absolute;
      bottom: 0;
      left:0;
      padding: $default-size 0;
      width: 100%;
      justify-content: center;
      background: $white;
    }

    .consent-settings {
      height: 100%;
    }

    .consent-container {
      padding-bottom: 6 * $default-size;
    }

    .agree {
      flex-grow: 0;
    }

    .save-my-choices {
      flex-grow: 0;
    }

    .safe-area {
      padding: 0;
    }
  }

  .safe-area {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: .5 * $default-size;
  }

  .consent-introduction {
    position: relative;
    border-radius: .5 * $default-size;
    background: $white;
    text-align: center;

    .privacy-logo {
      margin-top: 2 * $default-size;
      margin-bottom: $default-size;
      font-size: 2 * $consent-main-title-font-size;
    }

    .intro-title {
      padding: 0 1.5 * $default-size;
      font-weight: $privacy-main-title-font-weight;
      font-size: $consent-main-title-font-size;
    }

    .intro-text {
      padding: 0 1.75 * $default-size;
    }

    .bold {
      font-weight: $privacy-main-title-font-weight;
    }

    .continue-button {
      padding: 1.25 * $default-size 2 * $default-size 2.5 * $default-size 2 * $default-size;
      color: $consent-blue;
      font-size: $consent-title-font-size;
    }

    .unity-logo {
      margin-bottom: $default-size;
      opacity: .18;
    }
  }

  .consent-container {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    height: 80%;
    border-radius: .5 * $default-size;
    background: $white;
  }

  &:not(.intro) {
    .consent-container {
      display: flex;
    }
    .consent-introduction {
      display: none;
    }
  }

  &.intro {
    .consent-container {
      display: none;
    }
    .consent-introduction {
      display: block;
    }
  }

  .consent-settings {
    position: relative;
    overflow: auto;
    padding: 1.5 * $default-size;
    border-radius: .5 * $default-size;
    background: $white;
  }

  .consent-title {
    color: $black;
    font-weight: $privacy-main-title-font-weight;
    font-size: $consent-title-font-size;
  }

  .consent-button-container {
    position: relative;
    display: flex;
    flex-shrink: 0;
    justify-content: space-between;
    padding: $default-size $default-size;
    box-shadow: 0 0 3px 0 rgba(0, 0, 0, .19);
  }

  .consent-button {
    position: relative;
    align-self: center;
    padding: .75 * $default-size $default-size;
    border-radius: 2 * $default-size;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, .05);
    text-align: center;
    font-weight: $privacy-title-font-weight;
    font-size: $consent-button-font-size;

  }

  .consent-button {
    &.click-animation {
      $click-animation();
    }
  }

  .agree {
    display: block;
    flex-grow: 1;
    background: $consent-blue;
    color: $white;
  }

  .disagree {
    display: block;
    margin-left: $default-size;
    border: 1px solid $consent-border-gray;
    color: $black;
  }

  .save-my-choices {
    display: none;
    flex-grow: 1;
    background: $consent-blue;
    color: $white;
  }

  .consent-button-container:not(.show-save-my-choices-button) {
    .agree {
      display: block;
    }

    .disagree {
      display: block;
    }
    .save-my-choices {
      display: none;
    }
  }

  .consent-button-container.show-save-my-choices-button {
    .agree {
      display: none;
    }
    .disagree {
      display: none;
    }
    .save-my-choices {
      display: block;
    }
  }

  #third-party-switch.disabled {
    opacity: .4;
    pointer-events: none;
  }


  .switch-group-container {
    $switch-group-container();
    margin-top: .5 * $default-size;
  }

  .privacy-container {
    #privacy-row-item-container {
      .row-item {
        margin: 0 0 0 0;
        padding: $default-size 0;
        border-top: 1px solid $consent-divider-color;
        border-bottom: 1px solid $white;
      }

      .row-item-title {
        font-size: $consent-text-font-size;
      }

      .description {
        color: $consent-text-font-color;
        text-align: left;
        font-weight: $consent-text-font-weight;
        font-size: $consent-text-font-size;
      }

      .heading2 {
        display: block;
        font-weight: $privacy-main-title-font-weight;
        font-size: $consent-text-font-size;
      }

      .arrow-icon {
        margin-top: .25 * $default-size;
        padding-right: 0;
        font-size: $consent-text-font-size;
        opacity: 1;
      }

      .heading2 {
        font-size: $consent-text-font-size;
      }
    }
  }

}

&.landscape {
  #consent {
    .consent-introduction,
    .consent-container {
      left: 15%;
      width: 70%;
    }

    .consent-container {
      height: 100%;
    }

    .consent-introduction {
      .continue-button {
        padding: .5 * $default-size 2 * $default-size $default-size 2 * $default-size;
      }
    }
  }
}

$iphone-x-paddings() {
  #consent {
    .safe-area {
      top: constant(safe-area-inset-top);
      right: constant(safe-area-inset-right);
      bottom: constant(safe-area-inset-bottom);
      left: constant(safe-area-inset-left);

      top: env(safe-area-inset-top);
      right: env(safe-area-inset-right);
      bottom: env(safe-area-inset-bottom);
      left: env(safe-area-inset-left);

      padding: 0 .5 * $default-size;
    }
  }

  .landscape {
    #consent {
      .safe-area {
        padding: .5 * $default-size 0 0 0;
      }
    }
  }
}

/* iPhone X & iPhone XS */
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
  html {
    $iphone-x-paddings();
  }
}

/* iPhone XS Max */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
  html {
    $iphone-x-paddings();
  }
}

/* iPhone XR */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
  html {
    $iphone-x-paddings();
  }
}