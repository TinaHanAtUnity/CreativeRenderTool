@import "components.styl";

#consent {
  position: absolute;
  top: 0;
  right: 0;
  bottom 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: transparent;
  font-size: $consent-text-font-size;
  color: #181818;

  &.prevent-clicks {
    pointer-events: none;
  }
  .safe-area {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: .5 * $default-size;
  }

  .consent-container {
    position: relative;
    height: 80%;
    border-radius: .5 * $default-size;
    padding-top: .5 * $default-size;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background: $white;
  }

  .consent-introduction {
    display: none;
  }

  .consent-settings {
    position: relative;
    overflow: auto;
    background: $white;
    padding: 1.5 * $default-size;
  }

  .consent-title {
    font-size: .9 * $default-size;
    font-weight: $privacy-main-title-font-weight;
    color: $black;
  }

  .consent-button-container {
    position: relative;
    display: flex;
    flex-shrink: 0;
    justify-content: space-between;
    padding: $default-size $default-size;
    box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.19);
  }

  .consent-button {
    font-size: .8 * $default-size;
    border-radius: 2 * $default-size;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.05);
    text-align: center;
    padding: .75 * $default-size 1.5 * $default-size;
    align-self: center;
    font-weight: $privacy-title-font-weight;

  }

  .agree {
    background: $consent-blue;
    color: $white;
    flex-grow: 1;
  }

  .disagree {
    color: $black;
    border: 1px solid #D8D8D8;
    margin-left: $default-size;
  }

  #third-party-switch.disabled {
    pointer-events: none;
    opacity: 0.4;
  }


  .switch-group-container {
    $switch-group-container();
    margin-top: .5 * $default-size;
  }

}
$iphone-x-paddings() {
  #consent {
    .safe-area {
      top: constant(safe-area-inset-top);
      right: constant(safe-area-inset-right);
      bottom: constant(safe-area-inset-bottom);
      left: constant(safe-area-inset-left);

      top: env(safe-area-inset-top);
      right: env(safe-area-inset-right);
      bottom: env(safe-area-inset-bottom);
      left: env(safe-area-inset-left);

      padding: 0 .5 * $default-size;
    }
  }

  .landscape {
    #consent {
      padding: .5 * $default-size 0 0 0;
    }
  }
}

/* iPhone X & iPhone XS */
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
  html {
    $iphone-x-paddings();
  }
}

/* iPhone XS Max */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
  html {
    $iphone-x-paddings();
  }
}

/* iPhone XR */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
  html {
    $iphone-x-paddings();
  }
}