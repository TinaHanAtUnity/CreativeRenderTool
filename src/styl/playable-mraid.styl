/* Move this within correct scope */

$hiding-delay = 1.5s;
$progress-bar-width = 60%;
$filling-bar-width = $progress-bar-width * .3;

@import "game-shared.styl";

#playable-mraid {

  #mraid-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    border: none;
  }

  .close-region {
    position: absolute;
    top: 2px;
    right: 2px;
    z-index: 9999;
    display: none;
    width: 50px;
    height: 50px;
    opacity: .4;
  }

  .icon-close {
    position: absolute;
    top: 4px;
    right: 2px;
    width: 32px;
    height: 32px;
    color: $white;
    text-align: center;
    text-shadow: 2px 2px 20px $gray;
    font-size: 28px;
    line-height: 28px;
  }

  .close {
    position: absolute;
    top: 50%;
    left: 8px;
    width: 36px;
    height: 36px;
    transform: translate(0, -50%);
  }

  .progress-wrapper {
    position: absolute;
    clip: rect(0px, 36px, 36px, 18px);
    width: 36px;
    height: 36px;
  }

  .progress:after {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    color: $white;
    font-size: 18px;
    transform: translate(-50%, -50%);
  }

  .circle-base,
  .circle-left,
  .circle-right {
    position: absolute;
    width: 28px;
    height: 28px;
    border-radius: 100%;
    background-color: transparent;
    vertical-align: middle;
  }

  .circle-base {
    border: 4px solid $dark-gray;
  }

  .circle-left,
  .circle-right {
    clip: rect(0, 18px, 36px, 0);
    border: 4px solid $white;
  }

  .progress-wrapper,
  .circle-left,
  .circle-right {
    animation-duration: .01s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-timing-function: linear;
  }

  .loading-screen {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
    display: none;
    width: 100vw;
    height: 100vh;
    background-color: $white;
    opacity: 1;

    &.hidden {
      transition: opacity 200ms ease-out;
      transition-delay: $hiding-delay;

      opacity: 0;
      pointer-events: none;
    }

    .container {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      display: flex;
      margin: auto;

      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-box-pack: center;
      -webkit-box-align: center;

      flex-direction: column;
      justify-content: center;

      .user-text,
      .game-icon,
      .store-container,
      .name-container,
      .progress-bar {
        align-self: center;
        margin: 10px;
      }

      .user-text,
      .name-container {
        text-align: center;
      }
    }

    .user-text {
      color: $black;
      font-weight: 300;
      font-size: 14.5pt;
    }

    .progress-bar {
      overflow: hidden;
      width: $progress-bar-width;
      height: 3pt;
      background-color: $end-screen-info-gray;

      .filling {
        position: relative;
        left: 0;
        display: block;
        width: $filling-bar-width;
        height: 5pt;
        background-color: $blue;
        backface-visibility: hidden;
        transform: translate3d(0, 0, 0);
        animation: progress-bar-dynamic 1s linear infinite;
        will-change: left;
      }
    }
  }
}

@keyframes progress-bar-dynamic {
  0% {
    left: $filling-bar-width * -1;
  }

  30% {
    left: 55% - $filling-bar-width * .5;
  }

  32% {
    left: 53% - $filling-bar-width * .5;
  }

  35% {
    left: 35%;
  }

  37% {
    left: 38%;
  }

  42% {
    left: 51% - $filling-bar-width * .5;
  }

  45%, 60%, 70%, 80% {
    left: 50% - $filling-bar-width * .5;
  }

  90% {
    left: 80%;
  }

  100% {
    left: 100%;
  }
}

@keyframes progress-bar-dynamic {
  0% {
    left: $filling-bar-width * -1;
  }

  30% {
    left: 55% - $filling-bar-width * .5;
  }

  32% {
    left: 53% - $filling-bar-width * .5;
  }

  35% {
    left: 35%;
  }

  37% {
    left: 38%;
  }

  42% {
    left: 51% - $filling-bar-width * .5;
  }

  45%, 60%, 70%, 80% {
    left: 50% - $filling-bar-width * .5;
  }

  90% {
    left: 80%;
  }

  100% {
    left: 100%;
  }
}

@media screen and (min-height: 568px) {
  .loading-screen .game-icon {
    width: 96px;
    height: 96px;
  }
}

@media screen and (max-height: 240px) {
  .loading-screen {
    .container > div {
      margin: 3px;
    }

    .name-container {
      font-size: 12pt;
    }

    .game-rating {
      font-size: 10pt;
    }

    .user-text {
      font-size: 10.5pt;
    }
  }
}

// iPad
@media screen and (min-height: 768px) and (min-width: 1024px), screen and (min-height: 1024px) and (min-width: 768px) {
  .loading-screen {
    .user-text {
      font-size: 18.5pt;
    }
    .game-icon {
      width: 150px;
      height: 150px;
    }

    .progress-bar {
      width: $progress-bar-width * .8;
    }

    .game-rating {
      font-size: 20pt;
    }

    .name-container {
      font-size: 30pt;
    }

    .unityads-logo {
      bottom: 20px;
      width: 136px;
      height: 32px;
    }
  }
}
