@import "vars.styl";
@import "components.styl";
@import "gdpr-pop-up.styl";
@import "square-end-screen.styl";

$slider-experiment-dot-color = #fff;
$slider-experiment-dot-active-color = #099fde;
$slider-experiment-dot-radius = 5px;
$slider-experiment-dot-margin = 5px;

.game-background-container.slider-experiment {
    overflow: hidden;
}

#slider-list {
    height: 100%;
}

#slider-root-container {
    overflow: hidden;
    height: 100%;
    .slider-content {
        height: 100%;
        position: relative;
        left: 0;
        top: 0;
        display: block;
    }
    .slider-blurred-background {
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        width: 100%;
        height: 100%;
        filter: blur(13px);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        transform: scale(2);
        text-decoration: none;
    }
    .slider-item {
        float: left;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        img {
            max-height: 90%;
            margin: 0 .5em;
        }
    }
    .indicator-container {
        position: absolute;
        bottom: .35em;
        z-index: 10;
        display: flex;
        width: 100%;
        pointer-events: none;
        .slider-indicator {
            margin: 0 auto;
            .slider-dot {
                display: block;
                float: left;
                margin-right: $slider-experiment-dot-margin;
                margin-left: $slider-experiment-dot-margin;
                width: $slider-experiment-dot-radius;
                height: $slider-experiment-dot-radius;
                border-radius: 50%;
                background-color: $slider-experiment-dot-color;
                &.active {
                    background-color: $slider-experiment-dot-active-color;
                }
            }
        }
    }
}

.portrait #slider-root-container.landscape-slider-images {
    .slider-item img {
       max-width: 85VW;
    }
}

.landscape #slider-root-container.landscape-slider-images {
    .slider-item img {
        max-width: 48VW;
    }
}