@import "vars.styl";
@import "components.styl";
@import "gdpr-pop-up.styl";
@import "square-end-screen.styl";

$slider-experiment-dot-color = #fff;
$slider-experiment-dot-active-color = #099fde;
$slider-experiment-dot-radius = .3em;
$slider-experiment-dot-margin = .3em;

@keyframes bounceIn {
  15%, 45%, 70%, 85% {
    transition-timing-function: cubic-bezier(.215, .610, .355, 1.000);
  }
  15% {
    opacity: .25;
    transform: scale3d(.9, .9, .9);
  }
  45% {
    opacity: .5;
    transform: scale3d(1.03, 1.03, 1.03);
  }
  70% {
    opacity: .85;
    transform: scale3d(.99, .99, .99);
  }
  85% {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
}

$iphone-x-slider-styles() {
  .portrait.slider-experiment #end-screen.show-gdpr-banner .gdpr-pop-up {
    padding-bottom: .6em;
  }
}

/* iPhone X & iPhone XS */
@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
  $iphone-x-slider-styles();
}

/* iPhone XS Max */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3) {
  $iphone-x-slider-styles();
}

/* iPhone XR */
@media only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
  $iphone-x-slider-styles();
}

.slider-experiment {
  .portrait-slider-images {
    img {
      height: 100%;
    }
  }
}

.portrait.slider-experiment {
  #end-screen.show-gdpr-banner .gdpr-pop-up {
    position: fixed;
    bottom: 0;
    opacity: .9;
  }
  #end-screen .game-icon {
    margin-top: -18vh;
  }
  #slider-slides-container:after {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4em;
    background: linear-gradient(to top, rgb(250, 250, 250) 0, rgba(255, 255, 255, 0) 69%);
    content: "";
  }
  #end-screen {
    overflow: hidden;
    .campaign-container {
      .game-background-container {
        height: 63%;
      }
      .end-screen-info-background {
        height: 37%;
      }
    }
  }
  #end-screen .column-container {
    margin-top: 1em;
  }
  #slider-root-container.landscape-slider-images {
    .slider-item img {
      max-width: 85vw;
    }
  }
  #slider-root-container .indicator-container {
    margin-bottom: 8vh;
  }
}

.landscape.slider-experiment {
  .end-screen-info-background:before {
    position: absolute;
    bottom: 0;
    left: -4em;
    width: 4em;
    height: 100%;
    background: linear-gradient(to left, rgb(250, 250, 250) 0, rgba(255, 255, 255, 0) 69%);
    content: "";
  }
  #end-screen {
    .campaign-container {
      .game-background-container {
        width: 60%;
      }
      .end-screen-info-background {
        width: 40%;
      }
    }
  }
  #slider-root-container.landscape-slider-images {
    .slider-item img {
      max-width: 48vw;
    }
  }
}

#slider-root-container {
  overflow: hidden;
  height: 100%;

  .slider-content {
    position: relative;
    top: 0;
    left: 0;
    display: block;
    height: 100%;
  }

  .slider-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    float: left;
    height: 100%;
    opacity: .3;
    transform: scale(.8);
    transition: all .3s;
    img {
      max-height: 100%;
    }
    &.active-slide {
      opacity: 1;
      transform: scale(1);
      img {
        animation: bounceIn .7s;
        animation-fill-mode: both;
      }
    }
    &.active-slide.no-animation {
      transition: none;
      img {
        animation: none;
      }
    }
  }

  .indicator-container {
    position: absolute;
    bottom: 1em;
    z-index: 10;
    display: flex;
    width: 100%;
    pointer-events: none;

    .slider-indicator {
      margin: 0 auto;

      .slider-dot {
        display: block;
        float: left;
        margin-right: $slider-experiment-dot-margin;
        margin-left: $slider-experiment-dot-margin;
        width: $slider-experiment-dot-radius;
        height: $slider-experiment-dot-radius;
        border-radius: 50%;
        background-color: $slider-experiment-dot-color;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, .3);
        &.active {
          background-color: $slider-experiment-dot-active-color;
        }
      }
    }
  }
}
