@import "vars.styl";
@import "components.styl";
@import "gdpr-pop-up.styl";
@import "square-end-screen.styl";

$slider-experiment-dot-color = #fff;
$slider-experiment-dot-active-color = #099fde;
$slider-experiment-dot-radius = 5px;
$slider-experiment-dot-margin = 5px;

.game-background-container.slider-experiment {
    overflow: hidden;
}

#slider-root-container {
    overflow: hidden;
    height: 100%;
    .slider-content {
        position: relative;
        z-index: 2;
        height: 100%;
    }
    .slider-blurred-background {
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        width: 100%;
        height: 100%;
        filter: blur(13px);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        transform: scale(2);
        text-decoration: none;
    }
    .slider-item {
        position: relative;
        z-index: 2;
        float: left;
        height: 100%;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        pointer-events: none;
        img {
            position: absolute;
            top: 50%;
            left: 50%;
            max-width: 100%;
            max-height: 100%;
            transform: translate(-50%, -50%) scale(.9);
            object-fit: contain;
            pointer-events: all;
        }
    }
    .indicator-container {
        position: absolute;
        bottom: .35em;
        z-index: 10;
        display: flex;
        width: 100%;
        pointer-events: none;
        .slider-indicator {
            margin: 0 auto;
            .slider-dot {
                display: block;
                float: left;
                margin-right: $slider-experiment-dot-margin;
                margin-left: $slider-experiment-dot-margin;
                width: $slider-experiment-dot-radius;
                height: $slider-experiment-dot-radius;
                border-radius: 50%;
                background-color: $slider-experiment-dot-color;

                &.active {
                    background-color: $slider-experiment-dot-active-color;
                }
            }
        }
    }
}

#slider-root-container.landscape-slider-images {
    .slider-item img {
        left: 95%;
        transform: translate(-50%, -50%) scale(.95);
    }
}
