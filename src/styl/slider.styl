@import "vars.styl";
@import "components.styl";
@import "gdpr-pop-up.styl";
@import "square-end-screen.styl";

$slider-experiment-dot-color = #fff;
$slider-experiment-dot-active-color = #099fde;
$slider-experiment-dot-radius = 5px;
$slider-experiment-dot-margin = 5px;

.game-background-container.slider-experiment {
  overflow: hidden;
}

#slider-list {
  height: 100%;
}

.portrait #slider-slides-container:after {
    content: "";
    height: 4em;
    width: 100%;
    /* background: #fafafa; */
    z-index: 9999;
    position: absolute;
    bottom: 0;
    left: 0;
    background: linear-gradient(to top, rgb(250, 250, 250) 0%,rgba(255,255,255,0) 69%);
}

.landscape .end-screen-info-background:before {
    content: "";
    width: 4em;
    height: 100%;
    z-index: 9999;
    position: absolute;
    bottom: 0;
    left: -4em;
    background: linear-gradient(to left,#fafafa 0%,rgba(255,255,255,0) 69%);
}

.portrait #end-screen {
  .campaign-container.slider-experiment {
    .game-background-container {
      height: 63%;
    }
    .end-screen-info-background {
      height: 47%;
    }
  }
}

.portrait .end-screen-info {
    position: relative;
    bottom: 4em;
    z-index: 999;
}

.landscape #end-screen {
    .campaign-container.slider-experiment {
    .game-background-container {
      width: 60%;
    }
    .end-screen-info-background {
      width: 40%;
    }
  }
}

.slider-experiment {
  overflow: hidden;
}


#slider-root-container {
  overflow: hidden;
  height: 100%;

  .slider-content {
    position: relative;
    top: 0;
    left: 0;
    display: block;
    height: 100%;
  }

  .slider-blurred-background {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    filter: blur(13px);
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    transform: scale(2);
    text-decoration: none;
  }

  .slider-item:not(.active-slide) {
    // height: 80%;
    filter: blur(5px);
    transform: scale(.8);
  }

  .slider-item {
    transition: all .3s;
    display: flex;
    flex-direction: column;
    float: left;
    height: 100%;
    justify-content: center;

    img {
      margin: 0 .5em;
      max-height: 100%;
    }
  }

  .indicator-container {
    position: absolute;
    bottom: .35em;
    z-index: 10;
    display: flex;
    width: 100%;
    pointer-events: none;

    .slider-indicator {
      margin: 0 auto;

      .slider-dot {
        display: block;
        float: left;
        margin-right: $slider-experiment-dot-margin;
        margin-left: $slider-experiment-dot-margin;
        width: $slider-experiment-dot-radius;
        height: $slider-experiment-dot-radius;
        border-radius: 50%;
        background-color: $slider-experiment-dot-color;

        &.active {
          background-color: $slider-experiment-dot-active-color;
        }
      }
    }
  }
}

.portrait #slider-root-container.landscape-slider-images {
  .slider-item img {
    max-width: 85VW;
  }
}

.landscape #slider-root-container.landscape-slider-images {
  .slider-item img {
    max-width: 48VW;
  }
}
