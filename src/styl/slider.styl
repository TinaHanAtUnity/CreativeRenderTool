
.slider-wrap {
    position: relative;
    display: block;
    min-width: 100%;
    min-height: 100%;
    height: 180px;
}

.slider-content {
    position: relative;
    overflow: hidden;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    list-style: none;
}

.slider-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: translate3d(0, 0, 0);

    &>span {
        position: relative;
        display: block;
        width: 100%;
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        background-size: cover;
        text-decoration: none;

    }
    img {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        max-width: 100%;
        max-height: 100%;
    }
}

$dot-color = #fff;
$dot-active-color = #099fde;
$dot-radius = .25rem;

.slider-indicator {
    position: absolute;
    bottom: .5rem;
    left: 0;
    z-index: 10;
    .slider-dot {
        display: block;
        float: left;
        margin-right: .2rem;
        margin-left: .2rem;
        width: $dot-radius * 2;
        height: $dot-radius * 2;
        border-radius: 50%;
        background-color: $dot-color;

        &.active {
            background-color: $dot-active-color;
        }
    }
}
