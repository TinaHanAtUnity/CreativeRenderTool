@import "vars.styl";
@import "components.styl";
@import "gdpr-pop-up.styl";
@import "square-end-screen.styl";

body {
    &.portrait #end-screen {
        .column-container {
            margin-left: $default-size * $default-scale-size * .5;
        }

        .download-container {
            margin: $default-size * $default-scale-size * .75 auto;
        }
    }

    &.landscape #end-screen {
        .column-container {
            margin: $default-size * $default-scale-size * .5 0;
        }
        .btn-close-region {
            color: $gray;
        }
    }
}

.game-background-container {
    overflow: hidden;
}

#slider-root-container {
    overflow: hidden;
    height: 100%;
    .slider-content {
        position: relative;
        z-index: 2;
        height: 100%;
    }
    .slider-blurred-background {
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        width: 100%;
        height: 100%;
        filter: blur(13px);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        transform: scale(2);
        text-decoration: none;
    }
    .slider-item {
        position: relative;
        z-index: 2;
        float: left;
        height: 100%;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        img {
            position: absolute;
            top: 50%;
            left: 50%;
            max-width: 100%;
            max-height: 100%;
            transform: translate(-50%, -50%) scale(.9);
            object-fit: contain;
        }
    }
}

#slider-root-container.landscape-slider-images {
    .slider-item img {
        left: 95%;
        transform: translate(-50%, -50%) scale(.95);
    }
}

$dot-color = #fff;
$dot-active-color = #099fde;
$dot-radius = 5px;
$dot-margin = 5px;

.indicator-container {
    position: absolute;
    bottom: .35em;
    z-index: 10;
    display: flex;
    width: 100%;
    pointer-events: none;
    .slider-indicator {
        margin: 0 auto;
        .slider-dot {
            display: block;
            float: left;
            margin-right: $dot-margin;
            margin-left: $dot-margin;
            width: $dot-radius;
            height: $dot-radius;
            border-radius: 50%;
            background-color: $dot-color;

            &.active {
                background-color: $dot-active-color;
            }
        }
    }
}