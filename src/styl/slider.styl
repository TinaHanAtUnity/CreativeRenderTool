@import "vars.styl";
@import "components.styl";
@import "gdpr-pop-up.styl";
@import "square-end-screen.styl";

$slider-experiment-dot-color = #fff;
$slider-experiment-dot-active-color = #099fde;
$slider-experiment-dot-radius = 5px;
$slider-experiment-dot-margin = 5px;

@keyframes bounceIn {
  15%, 45%, 70%, 85% {
    transition-timing-function: cubic-bezier(.215, .610, .355, 1.000);
  }
  15% {
    opacity: .25;
    transform: scale3d(.9, .9, .9);
  }
  45% {
    opacity: .5;
    transform: scale3d(1.03, 1.03, 1.03);
  }
  70% {
    opacity: .85;
    transform: scale3d(.99, .99, .99);
  }
  85% {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
}

.portrait.slider-experiment {
  #end-screen .game-icon {
    margin-top: -18vh;
  }
  #slider-slides-container:after {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4em;
    background: linear-gradient(to top, rgb(250, 250, 250) 0, rgba(255, 255, 255, 0) 69%);
    content: "";
  }
  #end-screen {
    overflow: hidden;
    .campaign-container {
      .game-background-container {
        height: 63%;
      }
      .end-screen-info-background {
        height: 37%;
      }
    }
  }
  #end-screen .column-container {
    margin-top: 1em;
  }
  #slider-root-container.landscape-slider-images {
    .slider-item img {
      max-width: 85vw;
    }
  }
  #slider-root-container .indicator-container {
    display: none;
  }
}

.landscape.slider-experiment {
  .end-screen-info-background:before {
    position: absolute;
    bottom: 0;
    left: -4em;
    width: 4em;
    height: 100%;
    background: linear-gradient(to left, rgb(250, 250, 250) 0, rgba(255, 255, 255, 0) 69%);
    content: "";
  }
  #end-screen {
    .campaign-container {
      .game-background-container {
        width: 60%;
      }
      .end-screen-info-background {
        width: 40%;
      }
    }
  }
  #slider-root-container.landscape-slider-images {
    .slider-item img {
      max-width: 48VW;
    }
  }
}

#slider-root-container {
  overflow: hidden;
  height: 100%;

  .slider-content {
    position: relative;
    top: 0;
    left: 0;
    display: block;
    height: 100%;
  }

  .slider-blurred-background {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    filter: blur(13px);
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    transform: scale(2);
    text-decoration: none;
  }

  .slider-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    float: left;
    height: 100%;
    filter: blur(5px);
    transform: scale(.8);
    transition: all .3s;
    img {
      max-height: 100%;
      backface-visibility: hidden;
    }
  }

  .slider-item.active-slide {
    filter: blur(0);
    transform: scale(1);
    img {
      animation: bounceIn .7s;
      animation-fill-mode: both;
    }
  }

  .indicator-container {
    position: absolute;
    bottom: .35em;
    z-index: 10;
    display: flex;
    width: 100%;
    pointer-events: none;

    .slider-indicator {
      margin: 0 auto;

      .slider-dot {
        display: block;
        float: left;
        margin-right: $slider-experiment-dot-margin;
        margin-left: $slider-experiment-dot-margin;
        width: $slider-experiment-dot-radius;
        height: $slider-experiment-dot-radius;
        border-radius: 50%;
        background-color: $slider-experiment-dot-color;

        &.active {
          background-color: $slider-experiment-dot-active-color;
        }
      }
    }
  }
}
