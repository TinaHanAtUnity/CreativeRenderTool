#slider-root-container, .slider-item, .slider-content  {
    height: 100%;
}

.slider-item, .slider-content {
    position: relative;
    z-index: 2;
}

$dot-color = #fff;
$dot-active-color = #099fde;
$dot-radius = .25rem;

.slider-indicator {
    position: absolute;
    bottom: .5rem;
    left: 0;
    z-index: 10;
    .slider-dot {
        display: block;
        float: left;
        margin-right: .2rem;
        margin-left: .2rem;
        width: $dot-radius * 2;
        height: $dot-radius * 2;
        border-radius: 50%;
        background-color: $dot-color;

        &.active {
            background-color: $dot-active-color;
        }
    }
}
