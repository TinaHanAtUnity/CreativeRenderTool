#privacy-settings {
  position: absolute;
  display: flex;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  align-items: flex-end;
  flex-direction: row;
  background: rgba(0, 0, 0, .5);

  .main-view-container {
    border-top-left-radius: $default-size;
    border-top-right-radius: $default-size;
    background: $white;

    .settings-button {
      display: flex;
      flex-direction: column;
      text-align: center;
      background: $white-smoke;
      padding: $default-size;
      margin: .5 * $default-size 0;
    }
  }

  .personalization-container {
    display: none;
  }

  .view-your-data-container {
    display: none;
  }

  .report-ad-container {
    display: none;
  }

}