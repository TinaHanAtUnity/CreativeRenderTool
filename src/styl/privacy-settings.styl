@import "components.styl";

#privacy-settings {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);

  .safe-area-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .close-area {
    flex-grow: 1;
  }

  .page-container {
    padding: $default-size 2 * $default-size;
  }

  .view-container {
    position: relative;
    overflow: auto;
    padding-bottom: 1rem;
    min-height: 90%;
    max-height: 90%;
    border-top-left-radius: $default-size;
    border-top-right-radius: $default-size;
    background: $white;
  }

  .back-button {
    $privacy-back-button-default();
    padding: 2 * $default-size 2 * $default-size $default-size 2 * $default-size;
  }

  .main-view-container {
    text-align: center;

    .privacy-logo {
      padding: $default-size;
      color: $black;
      font-size: 1.5 * $default-size;
    }

    .settings-button {
      display: flex;
      flex-direction: column;
      margin: .5 * $default-size 0;
      padding: $default-size;
      border-radius: .25 * $default-size;
      background: $white-smoke;
      text-align: center;
      font-weight: $privacy-title-font-weight;
      font-size: $privacy-text-font-size;
    }

    .settings-button {
      font-weight: $privacy-title-font-weight;
    }

    .button-row-container {
      display: flex;
      flex-direction: row;

      .row-button {
        flex-grow: 1;
        padding: $default-size;
        border-radius: .25 * $default-size;
        background: $white-smoke;
        text-align: center;
        font-weight: $privacy-title-font-weight;
        font-size: $privacy-text-font-size;
      }

      .report-ad-button {
        margin-right: .5 * $default-size;
      }
    }

    .info-container {
      padding-top: $default-size;
    }
  }

  .report-ad-container {
    .report-button {
      position: relative;
      padding: .75 * $default-size $default-size;
      border: 1px solid $light-gray;
      border-radius: $default-size * .25;
      background-color: $blue;
      color: $white;
      text-align: center;
      font-weight: $privacy-title-font-weight;
      font-size: $privacy-text-font-size;
    }
  }

  .checkbox-group-container {
    $checkbox-group-container($default-scale-size, $default-font-size * .65);
  }

  .radio-group-container {
    $radio-group-container($default-scale-size, $default-font-size * .65);
    line-height: 1.25 * $default-size;
    font-weight: $privacy-text-font-weight;
  }

  &.initial {
    .back-button {
      display: none;
    }
    .view-container {
      animation: page-animation-min-to-max .3s ease-out;
    }
  }

  &:not(.initial) {
    .view-container {
      min-height: 0;
      max-height: 90%;
      animation: page-animation-max-to-min .3s ease-out;
    }
    .main-view-container {
      display: none;
    }
  }
  &:not(.personalization) {
    .personalization-container {
      display: none;
    }
  }
  &:not(.data) {
    .view-your-data-container {
      display: none;
    }
  }
  &:not(.report) {
    .report-ad-container {
      display: none;
    }
  }
  &:not(.build-info) {
    .build-info-container {
      display: none;
    }
  }

  .title {
    font-weight: $privacy-title-font-weight;
  }

  .heading {
    font-weight: $privacy-title-font-weight;
    font-size: $privacy-text-font-size;
  }

  .text {
    font-weight: $privacy-text-font-weight;
    font-size: $privacy-text-font-size;
  }

  .text-small {
    font-weight: $privacy-text-font-weight = 300;
    font-size: $default-font-size * .5;
  }

  @keyframes page-animation-min-to-max {
    0% {
      min-height: 0;
      max-height: 50%;
    }
    50% {
      min-height: 10%;
      max-height: 10%;
    }

    100% {
      min-height: 90%;
      max-height: 90%;
    }
  }

  @keyframes page-animation-max-to-min {
    0% {
      min-height: 90%;
      max-height: 90%;
    }
    50% {
      min-height: 10%;
      max-height: 10%;
    }

    100% {
      min-height: 0;
      max-height: 90%;
    }
  }
}
