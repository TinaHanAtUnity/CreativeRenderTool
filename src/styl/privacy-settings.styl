@import "components.styl";

#privacy-settings {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);

  .close-area {
    flex-grow: 1;
  }

  .container {
    position: relative;
    overflow: auto;
    padding: $default-size;
    height: 80%;
    border-top-left-radius: $default-size;
    border-top-right-radius: $default-size;
    background: $white;
  }

  .main-view-container {
    text-align: center;

    .settings-button {
      display: flex;
      flex-direction: column;
      margin: .5 * $default-size 0;
      padding: $default-size;
      background: $white-smoke;
      text-align: center;
      font-weight: $privacy-title-font-weight;
      font-size: $privacy-text-font-size;
    }
  }

  .checkbox-group-container {
    $checkbox-group-container($default-scale-size, $default-font-size * .65);
  }

  &.initial {
    .back-button {
      display: none;
    }
  }

  &:not(.initial) {
    .container {
      height: auto;
    }
    .main-view-container {
      display: none;
    }
  }
  &:not(.personalization) {
    .personalization-container {
      display: none;
    }
  }
  &:not(.data) {
    .view-your-data-container {
      display: none;
    }
  }
  &:not(.report) {
    .report-ad-container {
      display: none;
    }
  }
  &:not(.build-info) {
    .build-info-container {
      display: none;
    }
  }

  .title {
    font-weight: $privacy-title-font-weight;
  }

  .heading {
    font-weight: $privacy-title-font-weight;
    font-size: $privacy-text-font-size;
  }

  .text {
    font-weight: $privacy-text-font-weight;
    font-size: $privacy-text-font-size;
  }

}