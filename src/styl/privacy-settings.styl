@import "components.styl";

#privacy-settings {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);

  .safe-area-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .close-area {
    flex-grow: 1;
  }

  .page-container {
    padding: $default-size 2 * $default-size;
  }

  .view-container {
    position: relative;
    overflow: auto;
    height: 80%;
    border-top-left-radius: $default-size;
    border-top-right-radius: $default-size;
    background: $white;
  }

  .back-button {
    $privacy-back-button-default();
    padding: 2 * $default-size 2 * $default-size $default-size 2 * $default-size;
  }

  .main-view-container {
    text-align: center;

    .privacy-logo {
      padding: $default-size;
      color: $black;
      font-size: $default-size;
      opacity: .5;
    }

    .settings-button {
      display: flex;
      flex-direction: column;
      margin: .5 * $default-size 0;
      padding: $default-size;
      background: $white-smoke;
      text-align: center;
      font-weight: $privacy-title-font-weight;
      font-size: $privacy-text-font-size;
    }
  }

  .report-ad-container {
    .report-button {
      position: relative;
      padding: .75 * $default-size $default-size;
      border-radius: $default-size * .25;
      border: 1px solid $light-gray;
      font-size: $privacy-text-font-size;
      background-color: $blue;
      color: $white;
      text-align: center;
    }
  }

  .checkbox-group-container {
    $checkbox-group-container($default-scale-size, $default-font-size * .65);
  }

  .radio-group-container {
    $radio-group-container($default-scale-size, $default-font-size * .65);
  }

  &.initial {
    .back-button {
      display: none;
    }
  }

  &:not(.initial) {
    .view-container {
      height: auto;
    }
    .main-view-container {
      display: none;
    }
  }
  &:not(.personalization) {
    .personalization-container {
      display: none;
    }
  }
  &:not(.data) {
    .view-your-data-container {
      display: none;
    }
  }
  &:not(.report) {
    .report-ad-container {
      display: none;
    }
  }
  &:not(.build-info) {
    .build-info-container {
      display: none;
    }
  }

  .title {
    font-weight: $privacy-title-font-weight;
  }

  .heading {
    font-weight: $privacy-title-font-weight;
    font-size: $privacy-text-font-size;
  }

  .text {
    font-weight: $privacy-text-font-weight;
    font-size: $privacy-text-font-size;
  }

  .text-small {
    font-size: $default-font-size * .5;
    font-weight: $privacy-text-font-weight = 300;
  }

}