@import "vars.styl";
@import "components.styl";

#gdpr-privacy {
  $full-screen-pop-up-view($default-scale-size, 9999);
  overflow-x: hidden;

  .pop-up-content {
    .icon-gdpr {
      display: block;
      text-align: center;
      font-size: 2.5rem;
      opacity: .41;
    }

    .centered-title {
      display: block;
      text-align: center;
    }
  }
  .build-side,
  .report-side {
    display: none;
    font-size: $default-size * $default-font-size * .75;
  }

  .gdpr-text-android,
  .gdpr-text-ios {
    display: none;
  }

  #data-deletion-container,
  #report-confirmed-text {
    padding: $default-size * $default-scale-size * .75 0;
    .page-link {
      pointer-events: none;
    }
    &.active {
      .page-link {
        pointer-events: auto;
      }
    }
  }

  #data-deletion-container,
  #data-deletion-request-container,
  #report-confirmed-text {
    display: block;
    text-align: center;
    opacity: 0;
    transition: opacity 250ms ease-in;

    &.active {
      opacity: 1;
    }
  }

  &.build {
    .build-side {
      display: block;
      word-wrap: break-word;

      .build-information-key {
        font-weight: 800;
      }
    }

    .pop-up-content:not(.build-side) {
      display: none;
    }
  }

  &.report {
    .report-title {
      margin-top: 1rem;
      margin-bottom: 1rem;
      font-size: 1rem;
    }

    .report-side {
      display: block;
      word-wrap: break-word;
    }

    .report-container {
      .report-button {
        display: inline-block;
        float: right;
        margin: .5rem;
        margin-bottom: 1.5rem;
        padding: .75rem 1.5rem;
        border-radius: .25rem;
        background: $privacy-green;
        color: $white;
        font-size: .8125rem;
      }

      .report-confirmed-text {
        margin-bottom: 1.5rem;
        width: 50%;
        text-align: center;
        font-size: $default-size * $default-font-size * .75;
      }
    }

    .pop-up-content:not(.report-side) {
      display: none;
    }
  }
}

.build-information-item {
  margin: 0;
}

body.android #gdpr-privacy .gdpr-text-android,
body.iphone #gdpr-privacy .gdpr-text-ios,
body.ipad #gdpr-privacy .gdpr-text-ios {
  display: initial;
}

