/************************
* GENERAL
*************************/

html
  width: 100%
  height: 100%
  background-color: transparent

body.iphone
body.ipad
body.android
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-family: Helvetica, sans-serif
  color: #000
  background-color: transparent
  -webkit-text-size-adjust: none
  -webkit-touch-callout: none
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  -webkit-user-select: none
  -webkit-user-drag: none
  font-weight: lighter

/* for now fresh style is only on iphone */
body.iphone
body.ipad
body.android

  .page-container
    width: 100%
    height: 100%
    overflow: hidden
    position: absolute
    top: 0
    left: 0
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(100%, hsl(0, 0, 100%)), color-stop(0%, hsl(0, 0, 75%)))
    background: -webkit-linear-gradient(top, hsl(0, 0, 100%), hsl(0, 0, 75%))


  /************************
  *
  * END SCREEN
  *
  ************************/

  .campaign-container
    width: 100%
    height: 100%

  .btn-close-region
    position: absolute
    z-index: 1

  .btn-watch-again-region
    position: absolute
    z-index: 1

  a.btn-watch-again
  a.btn-close
    z-index: 1
    position: absolute
    background-color: rgba(255, 255, 255, 0.5);
    color: #222c37
    text-align: center

  a.btn-watch-again
    -webkit-transform: rotate(90deg)

  .game-background
    width: 100%
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    background-color: #000
    position: absolute
    top: 0
    bottom: 47%

  .end-screen-info-background
    position: absolute
    bottom: 0
    width: 100%
    height: 47%
    background-color: #fafafa

  .name-container
    color: #1f1e1e

  .game-icon
    float: left
    background-color: #FFF
    background-size: cover

  .store-container
    float: left

  .game-rating
    color: #e6e6e6
    display: inline-block
    position: relative

  .game-rating-mask
    color: #ff8e00
    position: absolute
    left: 0
    width: 0%
    height: 100%
    overflow: hidden
    font-size: inherit

  .game-rating-count
    color: #7c7c7c

  .game-rating-br
    display: none

  .game-rating-postfix
    display: none

  .download-container
    text-align: center
    clear: both

  .btn-download
    color: #ffffff
    display: block
    background-image: #167dfb
    background: #167dfb

    left: 0px
    right: 0px

  .download-text-alt
    display: none

  .download-text-fresh
    display: none

  .download-text-fresh-alt2
    display: none

  .download-text-fresh-alt3
    display: none

  .download-explanation
    display: none

  .unityads-logo
    background-image: url('../img/unityads.png')
    background-position: center
    background-size: cover
    margin: auto
    position: absolute
    left: 0px
    right: 0px

  .privacy-button
    position: absolute
    bottom: 10px
    left: 15px
    color: #DDD
    display: block;
    text-decoration: none
    font-size: 22px

  .download-explanation-fresh
    display: none

  .store-badge-container
    display: none

  /************************
  *
  * END SCREEN landscape specific
  *
  ************************/

  &.landscape
    .game-background
      width: 53%
      bottom: 0

    .end-screen-info-background
      width: 47%
      height: 100%
      right: 0

  /************************
  *
  * POPUP
  *
  *************************/

  .popup-background
    visibility: hidden
    position: absolute
    top: 0
    left: 0
    background-color: rgba(0, 0, 0, 0.75)
    width: 100%
    height: 100%
    z-index: 100
    text-align: center
    background-size: cover

  /************************
  *
  * SPINNER
  *
  *************************/

  .spinner-container
    display: inline-block
    text-align: center
    background-color: #000
    color: #FFF

  .spinner-text
    float: left

  .spinner-animation
    width: 24px
    height: 24px
    float: left
    margin-right: 15px
    border: 4px solid #fff
    border-left-color: transparent
    border-right-color: transparent
    border-radius: 200px
    -webkit-animation: spinner 1s linear infinite

  @-webkit-keyframes spinner
    from
      -webkit-transform: rotate(0deg)
    to
      -webkit-transform: rotate(360deg)

  /************************
  * ERROR
  *************************/

  .error-container
  .privacy-container
    display: inline-block
    text-align: center
    background-color: #000
    color: #FFF

    .privacy-simple-text
      display: none

    &.simple
      .privacy-text
        display: none
      .privacy-simple-text
        display: block

  .btn-ok
  .btn-cancel
    display: block
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #4aaef0), color-stop(100%, #016add))
    background: -webkit-linear-gradient(top, #4aaef0, #016add)

// Only show privacy button on Android
body.iphone
body.ipad
  .privacy-button
    display: none

/************************
* DEVICE AND GAME SPECIFICS
*************************/

@import "fresh-base-size.styl"
@import "fresh-responsive.styl"
@import "overlay.styl"
