/************************
* GENERAL
*************************/
@import "vars.styl";

html {
  width: 100%;
  height: 100%;
  background-color: transparent;
  font-size: $default-px-size;
}

body.iphone,
body.ipad,
body.android {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  color: $black;
  font-family: Helvetica, sans-serif;
  -webkit-text-size-adjust: none;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-user-select: none; // @stylint ignore
  -webkit-user-drag: none; // @stylint ignore
}


