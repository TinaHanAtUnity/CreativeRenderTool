@import "components.styl";
@import "vars.styl";
@import "icons.styl";

#promo {
  iframe {
    display: block;
    width: 100vw;
    height: 94vh;
    border: none;
  }

  .gdpr-pop-up {
    .gdpr-text {
      padding: $default-scale-size * $default-font-size * .5;
      font-size: $default-scale-size * $default-font-size * .5;
    }

    position: absolute;
    bottom: 0;
    width: 100%;
    height: 6vh;
    background-color:white;
    box-shadow: 0 0 15px 0 rgba(0, 0, 0, .1);
    opacity: 1;
    .gdpr-text {
      z-index: 110;
      text-align: center;

      .gdpr-link {
        color: $blue;
      }
    }
  }

  .privacy-button {
    $privacy-button-default($default-scale-size);
    position: absolute;
    top: 0;
    left: 0;
    margin: $default-size * $default-scale-size * .25 0 0 $default-size * $default-scale-size * .25;

    .icon-info {
      color: white;
    }
  }
}
