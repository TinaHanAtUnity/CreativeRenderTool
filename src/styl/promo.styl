@import "components.styl";
@import "vars.styl";
@import "icons.styl";

#promo {
  iframe {
    position: fixed;
    display: block;
    width: 100vw;
    height: 100vh;
    border: none;
  }

  .gdpr-pop-up {
    .gdpr-text {
      padding: $default-scale-size * $default-font-size * .5;
      font-size: $default-scale-size * $default-font-size * .5;

      position: relative;
      top: 50%;
      transform: perspective(1px) translateY(-50%);
      text-align: center;

      .gdpr-link {
        color: $blue;
      }
    }

    position: fixed;
    bottom: 0;
    width: 100%;
    height: 6vh;
    background-color: white;
    box-shadow: 0 0 15px 0 rgba(0, 0, 0, .1);
    opacity: 1;
    
  }

  .privacy-button {
    $privacy-button-default($default-scale-size);
    position: fixed;
    top: 0;
    left: 0;
    margin: $default-size * $default-scale-size * .25 0 0 $default-size * $default-scale-size * .25;

    .icon-gdpr {
      color: white;
    }
  }
}
