#promo
  .backdrop
    position: absolute;
    top:0;
    left:0;
    height: 100%;
    width: 100%;
    background-color: #000000;
    opacity: 0.25;
    text-align: center

  .promo-container
    position: absolute;
    background-image: url('../img/Portrait.png');
    background-size: cover;
    height: 28rem;
    width: 18.125rem;
    top:0;
    left:0;
    right:0;
    bottom: 0;
    margin: auto;

  .footer
    position: absolute;
    text-align: center;
    margin-bottom: 1rem;
    bottom: 1rem;
    width: 100%;

  .promo-btn
    background-image: url('../img/button.png');
    background-size: cover;
    height: 3.75rem;
    color: #ffffff;

  .close
    padding: 10px;
    position: absolute;
    top: 0;
    right: 0;
