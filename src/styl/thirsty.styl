#end-screen
  .bubble
    position: absolute;
    background: #fff;
    border-radius: 50%;
    background: -webkit-gradient(radial, center center, 0, center center, 100, from(rgba(75, 190, 200, .2)), to(rgba(255, 255, 255, .5)));
    background: gradient(center 45deg, circle closest-corner, rgba(75, 190, 200, 0), rgba(75, 190, 200, .1), rgba(75, 190, 200, .3), rgba(255, 255, 255, .5));
    -webkit-transform: translatez(0);
    transform: translatez(0);
    mix-blend-mode: overlay;

  .flash
    height: 100%;
    width: 30%;
    display: inline;
    position: absolute;
    top: 0;
    opacity: 0;
    -webkit-transform: translatez(0);
    transform: translatez(0);
    background: -webkit-linear-gradient(45deg, rgba(215, 223, 229, 0.1) 4%, rgba(255, 255, 255, 0.2) 100%);
    background: linear-gradient(45deg, rgba(215, 223, 229, 0.1) 4%, rgba(255, 255, 255, 0.2) 100%);
    mix-blend-mode: overlay;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    will-change: transform, opacity;

  &.active-animation .bubble
    -webkit-animation: animateBubble 0s linear infinite;
    animation: animateBubble 0s linear infinite;

  &.active-animation .flash
    -webkit-animation: flash 5s ease-out infinite;
    animation: flash 5s ease-out infinite;

  .campaign-container.thirsty-button .btn-download
    will-change: transform;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
    overflow: hidden;
    position: relative;
    -webkit-box-shadow: -2px 5px 2px 2px rgba(12, 70, 140, 0.75), inset 0 0 5px 1px rgba(255, 234, 234, 0.8);
    box-shadow: -2px 5px 2px 2px rgba(12, 70, 140, 0.75), inset 0 0 5px 1px rgba(255, 234, 234, 0.8);

    &.active
      -webkit-transform: translateY(4px);
      transform: translateY(4px);
      -webkit-box-shadow: -2px 1px 2px 1px rgba(12, 70, 140, 0.8), inset 0 0 5px 1px rgba(255, 234, 234, 0.8);
      box-shadow: -2px 1px 2px 1px rgba(12, 70, 140, 0.8), inset 0 0 5px 1px rgba(255, 234, 234, 0.8);

      .bubble
        -webkit-animation-play-state: paused;
        animation-play-state: paused;
