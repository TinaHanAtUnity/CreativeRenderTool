@import 'vars.styl';
@import 'tilted-layout-vars.styl';
@import 'iphone-x-series.styl';

body.tilted-layout #end-screen {
  .campaign-container {
    background: $black;

    .game-background-container {
      .game-background-portrait {
        transform: rotate(-15deg) scale(1.25);
      }
    }

    .end-screen-info-background {
      background: $tilted-black;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: unset;
      align-content: unset;
      justify-content: unset;

      .end-screen-info {
        padding: 0 2em;
        .game-icon-rating-container {
          .game-icon {
            margin-top: -1em;
            margin-bottom: 0;
          }
        }
      }
    }
  }
}
