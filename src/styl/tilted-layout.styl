@import 'vars.styl';
@import 'tilted-layout-vars.styl';
@import 'iphone-x-series.styl';

@font-face {
  font-family: 'AldotheApache';
  src: url('../fonts/MabExperimentation//AldotheApache.ttf') format('truetype');
}

body.tilted-layout #end-screen {
  .campaign-container {
    position: relative;
    display: block;
    overflow: hidden;
    background: $black;

    .game-creative-container {
      width: 100%;
      height: 65%; // make this 60% when on a regular phone, not stretched
      animation: game-creative-slide .3s ease-out 0s forwards 1;

      .game-creative-image {
        width: 100%;

        &.landscape {
          transform: rotate(-15deg) scale(1.4) translate(-10px, 42px); // remove the translation when using the description of the game, also scale was 1.35
        }

        &.square {
          transform: rotate(-15deg) scale(1.6) translate(-40px, 44px);
        }
      }
    }

    .privacy-button {
      right: .5em;
      bottom: unset;
      left: unset;
      z-index: 900;
      margin-left: unset;
      transform: translate(1.5em, 1.25em);

      .icon-gdpr {
        color: $white;
      }
    }

    .china-ad-unity-logo {
      position: absolute;
      right: .25em;
      bottom: .25em;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-bottom: unset;
      transform: rotate(-15deg);

      .china-advertisement {
        position: unset;
        right: unset;
        bottom: unset;
        padding: unset;
        color: $white;
        text-shadow: 0 0 4px $black;
        font-size: .75em;
        opacity: .6;
      }

      .unityads-logo {
        position: unset;
        bottom: unset;
        left: unset;
        max-height: unset;
        width: unset;
        color: $white;
        text-shadow: 0 0 4px $black;
        font-size: 1.5rem;
        opacity: .5;
      }
    }

    .gdpr-pop-up {
      bottom: unset;
      z-index: unset;
      align-items: flex-start;
      padding-top: .5em;
      height: 4em;
      transform: skewY(-15deg) translateY(-2em);

      .icon-gdpr {
        transform: skewY(15deg) rotate(-15deg);
      }

      .gdpr-text {
        padding: unset;
        transform: skewY(15deg) rotate(-15deg);
        font-size: .55em;
      }
    }

    .end-screen-info-background {
      position: relative;
      z-index: 2;
      display: flex;
      flex-direction: column;
      justify-content: unset;
      align-items: unset;
      align-content: unset;
      height: 35%; // make this 40% when on a regular phone, not stretched
      background: $tilted-layout-black;
      color: $tilted-layout-white;
      transform: translateY(30%); // Note: This is only for iphone X, which is the test device for the concept

      &::before {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        z-index: -1;
        display: block;
        height: 100%;
        background: inherit;
        content: '';
        transform: skewY(-15deg) translateY(-50px);
      }

      .end-screen-info {
        display: flex;
        flex-direction: column;
        transform: rotate(-15deg) translateY(-45%);
        padding-left: 2em;
        height: 50%;
        animation: end-screen-info-slide .3s ease-out 0s forwards 1;

        .game-icon-rating-container {
          display: flex;
          align-items: flex-end;
          margin-bottom: .25em;

          .game-rating-stars-top, .game-rating-stars-bottom {
            .icon-star {
              margin-left: -.15em;
              vertical-align: baseline;

              &::before {
                content: '\2605';
              }
            }
          }

          .game-icon {
            margin-bottom: 0;
            box-shadow: 0 0 15px 2px $tilted-layout-black;
          }

          .game-rating-container {
            display: flex;
            flex-direction: column;
            padding: .5em;

            .game-rating-stars-container {
              line-height: 0;
            }

            .game-rating {
              margin-top: unset;
              vertical-align: unset;
              text-align: unset;
              line-height: .6em;
            }

            .game-rating-count {
              vertical-align: middle;
            }

            .game-rating-number {
              display: flex;
              align-items: baseline;
              font-size: 1.2em;
              font-family: 'AldotheApache', Helvetica, sans-serif;
              line-height: .8;

              .game-rating-scale {
                font-size: .45em;
              }
            }
          }
        }

        .game-details-container {
          display: flex;
          flex-direction: column;
          transform: translateX(-1em);

          .game-name {
            font-size: 1.6em; // without description, this fits well at 1.75em;
            font-family: 'AldotheApache', Helvetica, sans-serif;
            line-height: 1em;
            text-transform: uppercase;
          }

          .game-description {
            font-size: .5em;
            line-height: 1.5em;
          }
        }
      }

      .download-cta-container {
        position: relative;
        height: 50%;
        transform: translateY(-45%);
        animation: download-container-slide .3s ease-out 0s forwards 1;

        .download-cta-button {
          position: absolute;
          right: 0;
          bottom: 0;
          width: 100%;
          height: 9em;
          background: $tilted-layout-blue;
          text-transform: uppercase;
          font-family: 'AldotheApache', Helvetica, sans-serif;
          transform: skewY(-15deg) translateY(50%);
          animation: cta-button-bounce 2s cubic-bezier(.39, .58, .57, 1) .5s infinite;

          .download-cta-text {
            display: flex;
            justify-content: center;
            font-size: 1.5em;
            line-height: 1.5em;
            transform: skewY(15deg) rotate(-15deg);
          }
        }
      }
    }
  }
}

// landscape styling
body.tilted-layout.landscape #end-screen { // @stylint ignore;
  .btn-close-region {
    color: $white;
  }

  .campaign-container {
    display: flex;

    .game-creative-container {
      position: relative;
      width: 55%;
      height: 100%;
      animation: landscape-game-creative-slide .3s ease-out 0s forwards 1;

      .game-creative-image.portrait {
        transform: translate(-3em, 1.5em) rotate(-15deg) scale(1.4);
      }

      .game-creative-image.square {
        transform: rotate(-15deg) scale(1.25);
      }
    }

    .end-screen-info-background {
      width: 45%;
      height: 100%;
      background: transparent;
      transform: translateY(0);

      &::before {
        width: 40em;
        background: $tilted-layout-black;
        transform: skewX(15deg);
      }

      .end-screen-info {
        transform: rotate(-15deg);
        display: flex;
        align-items: flex-start;
        padding-left: unset;
        animation: landscape-end-screen-info-slide .3s ease-out 0s forwards 1;

        .game-icon-rating-container {
          transform: translateX(-25%);
          align-items: center;

          .game-icon {
          }
        }

        .game-details-container {
          transform: translateY(0);
          max-width: 90%;

          .game-name {
            text-align: left;
          }
        }
      }

      .download-cta-container {
        transform: translateY(0);
        animation: landscape-download-container-slide .3s ease-out 0s forwards 1;

        .download-cta-button {
          padding-right: 1.5em;
          width: 30em;
          transform: skewY(-15deg) translateY(70%);
          animation: landscape-cta-button-bounce 2s cubic-bezier(.39, .58, .57, 1) .5s infinite;

          .download-cta-text {
            font-size: 2em;
            justify-content: flex-end;
          }
        }
      }
    }

    .gdpr-pop-up {
      position: absolute;
      bottom: 0px;
      z-index: 2;
      justify-content: flex-end;
      width: 60%;
      transform: rotate(-15deg);

      .icon-gdpr {
        transform: unset;
      }

      .gdpr-text {
        margin-right: 1.5em;
        width: 70%;
        font-size: .75em;
        transform: unset;
      }
    }

    .china-ad-unity-logo {
      transform: rotate(-15deg) translate(2.5em, -2.5em);

      .unityads-logo {
        font-size: 2rem;
      }
    }

    .privacy-button {
      position: absolute;
      right: unset;
      bottom: 0;
      left: 0;
      transform: translate(-.35em, 3em);
    }
  }
}

// these handle whether we show the landscape or
// portrait creative depending on the layout
body.tilted-layout.landscape { // @stylint ignore;
  .game-creative-image.landscape {
    display: none;
  }
}

body.tilted-layout.portrait { // @stylint ignore;
  .game-creative-image.portrait {
    display: none;
  }
}

// portrait animations
@keyframes cta-button-bounce {
  0%, 40%, 60%, 100% {
    transform: skewY(-15deg) translateY(50%);
  }

  50% {
    transform: skewY(-15deg) translateY(45%);
  }
}

@keyframes end-screen-info-slide {
  from {
    transform: rotate(-15deg) translateY(-45%) translateX(-200%);
  }

  to {
    transform: rotate(-15deg) translateY(-45%) translateX(0%);
  }
}

@keyframes game-creative-slide {
  from {
    transform: translateX(200%);
  }

  to {
    transform: translateX(0%);
  }
}

@keyframes download-container-slide {
  from {
    transform: translateY(200%);
  }

  to {
    transform: translateY(-45%);
  }
}

// landscape animations
@keyframes landscape-cta-button-bounce {
  0%, 40%, 60%, 100% {
    transform: skewY(-15deg) translateY(70%);
  }

  50% {
    transform: skewY(-15deg) translateY(65%);
  }
}

@keyframes landscape-end-screen-info-slide {
  from {
    transform: rotate(-15deg) translateX(200%);
  }

  to {
    transform: rotate(-15deg) translateX(0%);
  }
}

@keyframes landscape-game-creative-slide {
  from {
    transform: translateX(-200%);
  }

  to {
    transform: translateX(0%);
  }
}

@keyframes landscape-download-container-slide {
  from {
    transform: translateY(155%);
  }

  to {
    transform: translateY(0%);
  }
}

@media (orientation: portrait) {
  @media (max-height: 480px) {
    body.tilted-layout #end-screen {
      .campaign-container {
        .game-creative-container {
          .game-creative-image {
            &.landscape {
              transform: translateY(-3em) rotate(-15deg) scale(1.3);
            }

            &.square {
              transform: rotate(-15deg) scale(1.3);
            }
          }
        }

        .privacy-container {
          transform: rotate(-15deg) translateY(-1.25em);
        }

        .gdpr-pop-up {
          transform: skewY(-15deg) translateY(-10.5em);

          .gdpr-text {
            width: 75%;
          }
        }

        .end-screen-info-background {
          .end-screen-info {
            padding-left: 2.5em;
            transform: rotate(-15deg) translateY(-75%);
          }
        }
      }
    }

    @keyframes end-screen-info-slide {
      from {
        transform: rotate(-15deg) translateY(-75%) translateX(-200%);
      }

      to {
        transform: rotate(-15deg) translateY(-75%) translateX(0%);
      }
    }
  }

  @media (max-height: 568px) {
    body.tilted-layout #end-screen {
      .campaign-container {
        .game-creative-container {
          .game-creative-image {
            &.landscape {
              transform: rotate(-15deg) scale(1.31);
            }

            &.square {
              transform: rotate(-15deg) scale(1.31) translate(-.6em, .5em);
            }
          }
        }

        .privacy-container {
          transform: rotate(-15deg) translateY(-.75em);
        }

        .gdpr-pop-up {
          transform: skewY(-15deg) translateY(-7.5em);

          .gdpr-text {
            width: 75%;
          }
        }

        .end-screen-info-background {
          .end-screen-info {
            padding-left: 2.5em;
            transform: rotate(-15deg) translateY(-65%);
          }
        }
      }
    }

    @keyframes end-screen-info-slide {
      from {
        transform: rotate(-15deg) translateY(-65%) translateX(-200%);
      }

      to {
        transform: rotate(-15deg) translateY(-65%) translateX(0%);
      }
    }
  }
}

@media (orientation: landscape) {
  @media (max-width: 480px) {
    body.tilted-layout.landscape #end-screen {
      .campaign-container {
        .game-creative-container {
          .game-creative-image {
            &.portrait {
              transform: translate(-1em, 2.5em) rotate(-15deg) scale(1.75);
            }

            &.square {
              transform: translateY(.5em) rotate(-15deg) scale(1.3);
            }
          }
        }

        .privacy-container {
          transform: translate(1.1em, -1.5em) rotate(-15deg) scale(1.2);
        }

        .gdpr-pop-up {
          transform: rotate(-15deg) scale(1.2) translateY(2.5em);

          .gdpr-text {
            margin-right: 2.5em;
            width: 67%;
          }
        }

        .end-screen-info-background {
          .end-screen-info {
            transform: rotate(-15deg) translate(-.4em);
          }
        }
      }
    }

    @keyframes end-screen-info-slide {
      from {
        transform: rotate(-15deg) translateY(-75%) translateX(-200%);
      }

      to {
        transform: rotate(-15deg) translateY(-75%) translateX(0%);
      }
    }

    @keyframes landscape-end-screen-info-slide {
      from {
        transform: rotate(-15deg) translateX(200%);
      }

      to {
        transform: rotate(-15deg) translateX(-.4em);
      }
    }
  }

  @media (max-width: 568px) {
    body.tilted-layout.landscape #end-screen {
      .campaign-container {
        .game-creative-container {
          .game-creative-image {
            &.portrait {
              transform: translate(0em, 1.5em) rotate(-15deg) scale(1.5);
            }

            &.square {
              transform: translateY(.5em) rotate(-15deg) scale(1.3);
            }
          }
        }

        .privacy-container {
          transform: translate(.9em, -.5em) rotate(-15deg) scale(1.2);
        }

        .gdpr-pop-up {
          transform: rotate(-15deg) scale(1.2) translateY(2.5em);

          .gdpr-text {
            margin-right: 2.5em;
            width: 67%;
          }
        }

        .end-screen-info-background {
          .end-screen-info {
            transform: rotate(-15deg) translate(-.3em);
          }
        }
      }
    }

    @keyframes end-screen-info-slide {
      from {
        transform: rotate(-15deg) translateY(-75%) translateX(-200%);
      }

      to {
        transform: rotate(-15deg) translateY(-75%) translateX(0%);
      }
    }

    @keyframes landscape-end-screen-info-slide {
      from {
        transform: rotate(-15deg) translateX(200%);
      }

      to {
        transform: rotate(-15deg) translateX(-.4em);
      }
    }
  }
}