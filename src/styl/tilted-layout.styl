@import 'vars.styl';
@import 'tilted-layout-vars.styl';
@import 'iphone-x-series.styl';

@font-face {
  font-family: 'AldotheApache';
  src: url('../fonts/MabExperimentation//AldotheApache.ttf') format('truetype');
}

body.tilted-layout #end-screen {
  .campaign-container {
    background: $black;
    overflow: hidden;

    .game-creative-container {
      width: 100%;
      height: 60%;

      .game-creative-image {
        width: 100%;

        &.landscape {
          transform: rotate(-15deg) scale(1.35);
        }

        &.square {
          transform: rotate(-15deg) scale(1.35) translateX(-15px);
        }
      }
    }

    .end-screen-info-background {
      background: $tilted-layout-black;
      color: $tilted-layout-white;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: unset;
      align-content: unset;
      justify-content: unset;
      z-index: 2;
      height: 40%;

      &::before {
        position: absolute;
        display: block;
        background: inherit;
        top: 0;
        left: 0;
        right: 0;
        content: '';
        height: 100%;
        transform: skewY(-15deg) translateY(-50px);
        z-index: -1;
      }

      .end-screen-info {
        display: flex;
        flex-direction: column;
        transform: rotate(-15deg) translateY(-40%);
        padding-left: 2em;
        height: 50%;

        .game-icon-rating-container {
          display: flex;
          align-items: flex-end;
          margin-bottom: 0.25em;

          .game-rating-stars-top, .game-rating-stars-bottom {
            .icon-star {
              vertical-align: baseline;
              margin-left: -0.15em;

              &::before {
                content: '\2605';
              }
            }
          }

          .game-icon {
            margin-bottom: 0;
            box-shadow: 0px 0px 15px 2px $tilted-layout-black;
          }

          .game-rating-container {
            display: flex;
            flex-direction: column;
            padding: 0.5em;

            .game-rating-stars-container {
              line-height: 0;
            }

            .game-rating {
              vertical-align: unset;
              margin-top: unset;
              text-align: unset;
              line-height: 0.6em;
            }

            .game-rating-count {
              vertical-align: middle;
            }

            .game-rating-number {
              display: flex;
              font-family: 'AldotheApache';
              line-height: 0.8;
              font-size: 1.2em;
              align-items: baseline;

              .game-rating-scale {
                font-size: 0.45em;
              }
            }
          }
        }

        .game-details-container {
          display: flex;
          flex-direction: column;
          transform: translateX(-1.5em);

          .game-name {
            font-family: 'AldotheApache';
            text-transform: uppercase;
            font-size: 1.75em;
            line-height: 1em;
          }

          .game-description {
            font-size: 0.5em;
            line-height: 1.5em;
          }
        }
      }

      .download-cta-container {
        height: 100%;
        position: relative;
        overflow: hidden;

        .download-cta-button {
          transform: skewY(-15deg) translateY(40%);
          background: $tilted-layout-blue;
          text-transform: uppercase;
          font-family: 'AldotheApache';
          width: 100%;
          position: absolute;
          bottom: 0;
          right: 0;
          height: 100%;

          .download-cta-text {
            font-size: 1.5em;
            line-height: 1.5em;
            display: flex;
            justify-content: center;
            transform: skewY(15deg) rotate(-15deg);
          }
        }
      }
    }
  }
}
