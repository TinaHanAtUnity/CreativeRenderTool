#end-screen
  .campaign-container.whitespace

    .end-screen-stripe
      display: none

    .info-container
      display: block
      position: absolute
      top:0
      left:0
      width: 100%
      height: 100%
      box-sizing:border-box
      padding: 8px
      margin: 0

    .end-screen-info-background
      display: block
      position: relative
      width: 100%
      height: 100%
      opacity: 0.9
      box-sizing:border-box
      border: 0
      border-radius: 10px

    .game-background
      top: 0
      bottom: 0
      width: 100%
      height: 100%

    .end-screen-info
      top: 40%

  a.btn-close
    color: #7c7c7c
    text-shadow: 0

body.portrait
  #end-screen
    .campaign-container.whitespace
      .end-screen-info
          top: 55%
          -webkit-transform: translate(0, 0)

    a.btn-close
      color: #7c7c7c
      text-shadow: 0