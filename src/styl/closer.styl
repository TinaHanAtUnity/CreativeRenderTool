@import "components.styl";
@import "vars.styl";
@import "icons.styl";

#closer {
  position: absolute;
  width: 100%;
  height: 100%;

  .close-region {
    position: absolute;
    top: 20px;
    right: 46px;
  }

  .icon-close {
    position: absolute;
    top: 4px;
    right: 2px;
    width: 32px;
    height: 32px;
    color: $white;
    text-align: center;
    text-shadow: 2px 2px 20px $gray;
    font-size: 28px;
    line-height: 28px;
  }

  .close {
    position: absolute;
    top: 50%;
    left: 8px;
    width: 36px;
    height: 36px;
    transform: translate(0, -50%);
  }

  .progress-wrapper {
    position: absolute;
    clip: rect(0px, 36px, 36px, 18px);
    width: 36px;
    height: 36px;
  }

  .progress:after {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    color: white;
    font-size: 18px;
    transform: translate(-50%, -50%);
  }

  .circle-base,
  .circle-left,
  .circle-right {
    position: absolute;
    width: 28px;
    height: 28px;
    border-radius: 100%;
    background-color: transparent;
    vertical-align: middle;
  }

  .circle-base {
    border: 4px solid $dark-gray;
  }

  .circle-left,
  .circle-right {
    clip: rect(0, 18px, 36px, 0);
    border: 4px solid $white;
  }

  .progress-wrapper,
  .circle-left,
  .circle-right {
    animation-duration: .01s;
    animation-timing-function: linear;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
  }

  .gdpr-pop-up {

      position: absolute;
      bottom: 0;
      width: 100%;
      background-color: $dark-gdpr-banner;
      box-shadow: 0 0 15px 0 rgba(0, 0, 0, .1);
      opacity: 1;

      .gdpr-text {
        z-index: 110;
        padding: $default-scale-size * $default-font-size * .5;
        color: $white;
        text-align: center;
        font-size: $default-scale-size * $default-font-size * .5;

        .gdpr-link {
          color: $blue;
        }
    }
  }

  .privacy-button {
    position: absolute;
    top: 0;
    width: 100%;

    .icon-info {
      color: white;
    }
  }

}
