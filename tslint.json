{
  "extends": "tslint:recommended",
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "rules": {
    "quotemark": ["single"],
    "variable-name": false,
    "whitespace": [
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "trailing-comma": false,
    "max-line-length": false,
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": false,
    "prefer-const": true
  }
}
